<UserControl
    x:Class="TraSuaApp.WpfClient.Controls.NumericUpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:TraSuaApp.WpfClient.Controls">
    <Grid>
        <!--  Nút trừ  -->
        <Button
            Grid.Column="0"
            HorizontalAlignment="Left"
            Panel.ZIndex="1"
            Click="Minus_Click"
            Content="➖"
            Focusable="False"
            IsTabStop="False"
            Style="{StaticResource XoaButtonStyle}" />

        <!--  TextBox nhập số  -->
        <ctrl:NumericTextBox
            x:Name="txtValue"
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Center" />

        <!--  Nút cộng  -->
        <Button
            Grid.Column="2"
            HorizontalAlignment="Right"
            Panel.ZIndex="1"
            Click="Plus_Click"
            Content="➕"
            Focusable="False"
            IsTabStop="False"
            Style="{StaticResource XoaButtonStyle}" />
    </Grid>
</UserControl>