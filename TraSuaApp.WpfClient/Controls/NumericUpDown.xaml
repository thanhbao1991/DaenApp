<UserControl
    x:Class="TraSuaApp.WpfClient.Controls.NumericUpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TraSuaApp.WpfClient.Controls">
    <Grid>
        <!--  Nút trừ  -->
        <Button
            Grid.Column="0"
            HorizontalAlignment="Left"
            Panel.ZIndex="1"
            Click="Minus_Click"
            Content="➖"
            Focusable="False"
            Foreground="{StaticResource DarkBrush}"
            IsTabStop="False"
            Style="{StaticResource XoaButtonStyle}" />
        <!--  Ô nhập số lượng  -->
        <local:NumericTextBox
            x:Name="txtValue"
            Grid.Column="1"
            MinWidth="80"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            BorderBrush="Transparent"
            FontWeight="Medium"
            Foreground="{StaticResource PrimaryBrush}"
            Text="{Binding Value, RelativeSource={RelativeSource AncestorType={x:Type local:NumericUpDown}}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <!--  Nút cộng  -->
        <Button
            Grid.Column="2"
            HorizontalAlignment="Right"
            Panel.ZIndex="1"
            Click="Plus_Click"
            Content="➕"
            Focusable="False"
            Foreground="{StaticResource DarkBrush}"
            IsTabStop="False"
            Style="{StaticResource XoaButtonStyle}" />
    </Grid>
</UserControl>
