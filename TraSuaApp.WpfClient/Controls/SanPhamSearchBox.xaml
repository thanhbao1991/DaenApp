<UserControl
    x:Class="TraSuaApp.WpfClient.Controls.SanPhamSearchBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="Root"
    PreviewKeyDown="Root_PreviewKeyDown">

    <Grid>
        <!--  Ô nhập tìm kiếm  -->
        <Grid>
            <TextBox
                x:Name="SearchTextBox"
                Padding="4,4,28,4"
                VerticalContentAlignment="Center"
                PreviewKeyDown="SearchBox_And_ListBox_PreviewKeyDown"
                TextChanged="SearchTextBox_TextChanged" />

            <Button
                x:Name="ClearButton"
                Click="ClearButton_Click"
                Focusable="False"
                IsTabStop="False"
                Style="{StaticResource ClearXButtonStyle}"
                Visibility="Collapsed" />
        </Grid>

        <!--  Popup kết quả  -->
        <Popup
            x:Name="Popup"
            AllowsTransparency="True"
            IsOpen="{Binding IsPopupOpen, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
            Placement="Bottom"
            PlacementTarget="{Binding ElementName=SearchTextBox}"
            PopupAnimation="Slide"
            StaysOpen="False"
            VerticalOffset="2">
            <Border
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1">
                <ListBox
                    x:Name="ListBoxResults"
                    MinWidth="410"
                    BorderBrush="Transparent"
                    MouseLeftButtonUp="ListBoxResults_MouseLeftButtonUp"
                    PreviewKeyDown="SearchBox_And_ListBox_PreviewKeyDown">

                    <!--  Mỗi sản phẩm 1 dòng  -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel HorizontalAlignment="Stretch" Orientation="Horizontal">

                                <!--  Biến thể đầu tiên  -->
                                <Button
                                    Height="32"
                                    MinWidth="250"
                                    HorizontalContentAlignment="Left"
                                    Background="Transparent"
                                    BorderBrush="Transparent"
                                    BorderThickness="1"
                                    Click="BienThe_Click"
                                    FontWeight="Medium"
                                    Tag="{Binding BienThes[0]}">
                                    <TextBlock>
                                        <Run Text="{Binding TenSanPham}" />
                                        <!--<Run Text=" " />
                                        <Run Text="{Binding BienThes[0].TenBienThe}" />
                                        <Run Text=" " />
                                        <Run
                                            FontWeight="Bold"
                                            Foreground="DarkRed"
                                            Text="{Binding BienThes[0].GiaBan, StringFormat={}{0:N0} đ}" />-->
                                    </TextBlock>
                                </Button>

                                <!--  Các biến thể còn lại  -->
                                <ItemsControl ItemsSource="{Binding BienThes, Converter={StaticResource SkipFirstConverter}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button
                                                Width="50"
                                                Height="32"
                                                HorizontalContentAlignment="Right"
                                                Background="Transparent"
                                                BorderBrush="Transparent"
                                                BorderThickness="1"
                                                Click="BienThe_Click"
                                                FontWeight="Medium"
                                                Tag="{Binding}">
                                                <TextBlock>
                                                    <!--<Run Text="{Binding TenBienThe}" />
                                                    <Run Text=" " />-->
                                                    <Run
                                                        FontWeight="Bold"
                                                        Foreground="DarkRed"
                                                        Text="{Binding GiaBan, StringFormat={}{0:N0} đ}" />
                                                </TextBlock>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button
                                    Name="UpButton"
                                    Width="50"
                                    Margin="8,0,0,0"
                                    Click="MoveButton_Click"
                                    Content="▲"
                                    Style="{StaticResource ThemButtonStyle}"
                                    Tag="{Binding BienThes[0].SanPhamId}" />
                                <Button
                                    Width="50"
                                    Click="MoveButton_Click"
                                    Content="▼"
                                    Style="{StaticResource XoaButtonStyle}"
                                    Tag="{Binding BienThes[0].SanPhamId}" />

                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Border>
        </Popup>
    </Grid>
</UserControl>