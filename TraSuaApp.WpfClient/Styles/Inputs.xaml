<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TraSuaApp.WpfClient.Controls"
    xmlns:conv="clr-namespace:TraSuaApp.WpfClient.Converters">


    <!--  Input cơ bản  -->
    <Style x:Key="BaseInputStyle" TargetType="Control">
        <Setter Property="Margin" Value="3" />
        <Setter Property="Padding" Value="5" />
        <Setter Property="BorderBrush" Value="#ccc" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style
        x:Key="TextBoxStyle"
        BasedOn="{StaticResource BaseInputStyle}"
        TargetType="TextBox" />
    <Style
        x:Key="NumericTextBoxStyle"
        BasedOn="{StaticResource BaseInputStyle}"
        TargetType="local:NumericTextBox" />
    <Style
        x:Key="MoneyTextBoxStyle"
        BasedOn="{StaticResource BaseInputStyle}"
        TargetType="local:MoneyTextBox" />
    <Style
        x:Key="PhoneNumberTextBoxStyle"
        BasedOn="{StaticResource BaseInputStyle}"
        TargetType="local:PhoneNumberTextBox" />
    <Style
        x:Key="ComboBoxStyle"
        BasedOn="{StaticResource BaseInputStyle}"
        TargetType="ComboBox" />
    <Style
        x:Key="PasswordBoxStyle"
        BasedOn="{StaticResource BaseInputStyle}"
        TargetType="PasswordBox" />
    <Style
        x:Key="DatePickerStyle"
        BasedOn="{StaticResource BaseInputStyle}"
        TargetType="DatePicker" />
</ResourceDictionary>