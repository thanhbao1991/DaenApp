<Window
    x:Class="TraSuaApp.WpfClient.Controls.RegionCaptureWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    AllowsTransparency="True"
    Background="#55000000"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None">
    <Grid Focusable="True">
        <!--  Quan trọng: phải có Background để nhận chuột  -->
        <Canvas
            x:Name="Layer"
            Background="Transparent"
            SnapsToDevicePixels="True">
            <Rectangle
                x:Name="SelectionRect"
                Fill="#400000FF"
                IsHitTestVisible="False"
                Stroke="DodgerBlue"
                StrokeThickness="2"
                Visibility="Collapsed" />
            <Border
                Margin="12"
                Padding="8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#60000000"
                CornerRadius="4"
                IsHitTestVisible="False">
                <TextBlock
                    FontSize="14"
                    Foreground="White"
                    Text="Kéo chuột để chọn vùng  •  ESC để hủy" />
            </Border>
        </Canvas>
    </Grid>
</Window>