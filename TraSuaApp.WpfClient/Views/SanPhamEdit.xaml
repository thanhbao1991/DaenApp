<Window
    x:Class="TraSuaApp.WpfClient.Views.SanPhamEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sản phẩm"
    AllowsTransparency="True"
    Background="#88000000"
    PreviewKeyDown="Window_KeyDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        CornerRadius="12">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Tiêu đề  -->
            <DockPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                LastChildFill="True">
                <TextBlock
                    Margin="10,5"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#333"
                    Text="Sản phẩm" />
                <Button
                    Width="28"
                    Height="28"
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Content="✖"
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#888" />
            </DockPanel>

            <!--  Nội dung  -->
            <StackPanel Grid.Row="1">
                <!--  Tên sản phẩm  -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Tên sản phẩm:" />
                    <TextBox x:Name="TenTextBox" Width="300" />
                </StackPanel>

                <!--  Viết tắt  -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Viết tắt:" />
                    <TextBox x:Name="VietTatTextBox" Width="300" />
                </StackPanel>

                <!--  Mô tả  -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Mô tả:" />
                    <TextBox x:Name="MoTaTextBox" Width="300" />
                </StackPanel>

                <!--  CheckBox  -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock Width="120" />
                    <CheckBox
                        x:Name="NgungBanCheckBox"
                        Width="120"
                        Margin="0,12,0,4"
                        Content="Ngừng Bán" />
                    <CheckBox
                        x:Name="TichDiemCheckBox"
                        Width="120"
                        Margin="0,12,0,4"
                        Content="Tích điểm" />
                </StackPanel>

                <!--  ComboBox Nhóm sản phẩm  -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Nhóm:" />
                    <ComboBox
                        x:Name="NhomSanPhamComboBox"
                        Width="300"
                        DisplayMemberPath="Ten"
                        SelectedValuePath="Id" />
                </StackPanel>

                <!--  GroupBox Size  -->
                <GroupBox Header="Size">
                    <StackPanel>
                        <StackPanel Margin="0,8,0,0" Orientation="Horizontal">
                            <TextBox
                                x:Name="TenBienTheTextBox"
                                Width="220"
                                Margin="8,0,10,0" />
                            <TextBox
                                x:Name="GiaBanTextBox"
                                Width="70"
                                Margin="0,0,10,0"
                                HorizontalContentAlignment="Right"
                                PreviewTextInput="GiaBanTextBox_PreviewTextInput"
                                TextChanged="GiaBanTextBox_TextChanged" />
                            <CheckBox
                                x:Name="MacDinhCheckBox"
                                Checked="MacDinhCheckBox_Checked"
                                Content="Mặc định" />
                        </StackPanel>

                        <ListBox
                            x:Name="BienTheListBox"
                            Height="80"
                            Margin="8,8,8,0"
                            HorizontalContentAlignment="Stretch"
                            Background="#f0f0f0"
                            BorderBrush="Transparent"
                            SelectionChanged="BienTheListBox_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="4,2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="40" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{Binding TenBienThe}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Text="{Binding GiaBan, StringFormat={}{0:N0}}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="★"
                                            Visibility="{Binding MacDinh, Converter={StaticResource BoolToVisibilityConverter}}" />
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <WrapPanel>
                            <Button
                                Click="ThemBienTheButton_Click"
                                Content="Thêm"
                                Style="{StaticResource ThemButtonStyle}" />
                            <Button
                                Click="SuaBienTheButton_Click"
                                Content="Cập nhật"
                                Style="{StaticResource SuaButtonStyle}" />
                            <Button
                                Click="XoaBienTheButton_Click"
                                Content="Xoá"
                                Style="{StaticResource XoaButtonStyle}" />
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <!--  Hiển thị lỗi  -->
                <TextBlock
                    x:Name="ErrorTextBlock"
                    MaxWidth="400"
                    MaxHeight="30"
                    Margin="0,10,0,0"
                    FontWeight="SemiBold"
                    Foreground="Red"
                    TextWrapping="Wrap" />
            </StackPanel>

            <!--  Nút Lưu / Huỷ  -->
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="SaveButton"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Content="Lưu"
                    Style="{StaticResource EditButtonStyle}" />
                <Button
                    Width="80"
                    Click="CloseButton_Click"
                    Content="Huỷ"
                    Style="{StaticResource BaseButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>