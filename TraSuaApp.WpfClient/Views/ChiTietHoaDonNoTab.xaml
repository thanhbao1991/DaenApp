<UserControl
    x:Class="TraSuaApp.WpfClient.Views.ChiTietHoaDonNoTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Thanh tìm kiếm + quick filter (ĐÃ XOÁ 2 NÚT F1/F4 CŨ)  -->
        <DockPanel Margin="4">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <TextBlock
                    Padding="8"
                    VerticalAlignment="Center"
                    Text="Tìm kiếm:" />
                <TextBox
                    x:Name="SearchChiTietHoaDonNoTextBox"
                    Width="320"
                    Margin="8,0,0,0"
                    TextChanged="SearchChiTietHoaDonNoTextBox_TextChanged" />
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                <Button
                    Click="TimKiemNhanhCongNoButton_Click"
                    Content="Công nợ hôm nay"
                    Foreground="White"
                    Style="{StaticResource ThemButtonStyle}"
                    Tag="hôm nay" />
                <Button
                    Click="TimKiemNhanhCongNoButton_Click"
                    Content="Công nợ hôm qua"
                    Foreground="White"
                    Style="{StaticResource ThemButtonStyle}"
                    Tag="hôm qua" />
            </StackPanel>
        </DockPanel>

        <DataGrid
            x:Name="ChiTietHoaDonNoDataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            MouseDoubleClick="ChiTietHoaDonNoDataGrid_MouseDoubleClick">

            <!--  Giữ style giống các tab khác  -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding Stt}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="STT" />
                <DataGridTextColumn
                    Width="110"
                    Binding="{Binding Ngay, StringFormat=dd-MM-yyyy}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="Ngày" />
                <DataGridTextColumn
                    Width="90"
                    Binding="{Binding NgayGio, StringFormat=HH:mm}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="Giờ" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Ten}"
                    ElementStyle="{StaticResource LeftTextCellStyle}"
                    Header="Tên" />
                <DataGridTextColumn
                    x:Name="TongTienChiTietHoaDonNoTextBlock"
                    Width="140"
                    Binding="{Binding SoTienConLai, StringFormat={}{0:N0} đ}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Còn lại" />

                <!--  ⬇️ HAI NÚT THU TIỀN NGAY SAU CỘT "Còn lại"  -->
                <DataGridTemplateColumn Width="auto" Header="(Thu nhanh nhấn giữ Ctrl)">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button
                                    Padding="6,3"
                                    HorizontalAlignment="Center"
                                    Click="TienMatRowButton_Click"
                                    Style="{StaticResource EditButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="{StaticResource LightBrush}"
                                            Icon="MoneyBill" />
                                        <TextBlock Margin="6,0,0,0" Text="Tiền mặt" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Margin="8,0,0,0"
                                    Padding="6,3"
                                    HorizontalAlignment="Center"
                                    Background="{StaticResource WarningBrush}"
                                    Click="ChuyenKhoanRowButton_Click"
                                    Style="{StaticResource EditButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="{StaticResource WarningForeground}"
                                            Icon="CreditCard" />
                                        <TextBlock
                                            Margin="6,0,0,0"
                                            Foreground="{StaticResource WarningForeground}"
                                            Text="Chuyển khoản" />
                                    </StackPanel>
                                </Button>

                            </StackPanel>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>


                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding GhiChu}"
                    ElementStyle="{StaticResource LeftTextCellStyle}"
                    Header="Ghi chú" />

                <!--  Cột nút Xoá  -->
                <DataGridTemplateColumn Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                HorizontalAlignment="Right"
                                Click="XoaChiTietHoaDonNoButton_Click"
                                Style="{StaticResource XoaButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Margin="0,0,5,0" Icon="Trash" />
                                    <TextBlock Text="Xoá" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>