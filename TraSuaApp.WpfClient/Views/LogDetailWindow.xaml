<Window
    x:Class="TraSuaApp.WpfClient.Views.LogDetailWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Chi tiết log"
    Background="#88000000"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Border
        Padding="8"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        CornerRadius="6">
        <StackPanel>
            <TextBlock
                Margin="0,0,0,8"
                FontSize="14"
                FontWeight="Bold"
                Text="{Binding Header}" />
            <DataGrid
                AutoGenerateColumns="False"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                GridLinesVisibility="None"
                HeadersVisibility="Column"
                ItemsSource="{Binding Entries}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Property}"
                        Header="Thuộc tính" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Before}"
                        Header="Trước" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding After}"
                        Header="Sau" />
                </DataGrid.Columns>
            </DataGrid>
            <Button
                Width="80"
                Margin="0,8,0,0"
                HorizontalAlignment="Right"
                Click="Close_Click">
                Đóng
            </Button>
        </StackPanel>
    </Border>
</Window>