<Window
    x:Class="TraSuaApp.WpfClient.HoaDonViews.HoaDonList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource PopupWindowWithBorderStyle}"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Tiêu đề  -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Name="TieuDeTextBlock" Style="{StaticResource TitleTextStyle}" />
            <Button
                Click="CloseButton_Click"
                DockPanel.Dock="Right"
                Style="{StaticResource CloseButtonStyle}" />
        </DockPanel>

        <!--  Thanh công cụ  -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Margin="0,0,4,0">
                <TextBox
                    x:Name="SearchTextBox"
                    Style="{StaticResource SearchTextBoxStyle}"
                    TextChanged="SearchTextBox_TextChanged" />
                <TextBlock
                    Style="{StaticResource SearchHintTextStyle}"
                    Text="Tìm kiếm..."
                    Visibility="{Binding Text.IsEmpty, ElementName=SearchTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="AddButton_Click"
                    Content="Thêm"
                    Style="{StaticResource AddButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="EditButton_Click"
                    Content="Sửa"
                    Style="{StaticResource EditButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="DeleteButton_Click"
                    Content="Xoá"
                    Style="{StaticResource DeleteButtonStyle}" />
                <Button
                    Width="80"
                    Click="ReloadButton_Click"
                    Content="Tải lại"
                    Style="{StaticResource ReloadButtonStyle}" />
            </StackPanel>
      
        </Grid>

        <!--  Danh sách  -->
        <DataGrid
            x:Name="HoaDonDataGrid"
            Grid.Row="2"
            Margin="0"
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            MouseDoubleClick="HoaDonDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="40"
                    Binding="{Binding STT}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="STT" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding TenBan}"
                    Header="Tên bàn" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding TrangThai}"
                    Header="Trạng thái" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding TongTien, StringFormat=N0}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Tổng tiền" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding GiamGia, StringFormat=N0}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Giảm giá" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding ThanhTien, StringFormat=N0}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Thành tiền" />
                <DataGridTextColumn Binding="{Binding ThanhToanChiTiet}" Header="Đã thu" />
                <DataGridTextColumn Binding="{Binding ConLai}" Header="Còn lại" />
                <DataGridTextColumn
                    Width="140"
                    Binding="{Binding LastModified, StringFormat=dd/MM/yyyy HH:mm}"
                    Header="Ngày sửa" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>