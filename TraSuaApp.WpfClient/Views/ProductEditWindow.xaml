<!--  ProductEditWindow.xaml  -->
<Window
    x:Class="TraSuaApp.WpfClient.Views.ProductEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sản phẩm"
    Width="900"
    Height="600"
    AllowsTransparency="True"
    Background="#88000000"
    PreviewKeyDown="Window_KeyDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Padding="16"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        CornerRadius="12">
        <DockPanel LastChildFill="True">
            <!--  Tiêu đề và nút đóng  -->
            <DockPanel Margin="0,0,0,12" DockPanel.Dock="Top">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Sản phẩm" />
                <Button
                    Width="28"
                    Height="28"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Content="✖"
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#888" />
            </DockPanel>

            <!--  Nội dung  -->
            <StackPanel>
                <!--  Thông tin sản phẩm  -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Tên sản phẩm:" />
                    <TextBox x:Name="TenTextBox" Width="300" />
                </StackPanel>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Viết tắt:" />
                    <TextBox x:Name="VietTatTextBox" Width="300" />
                </StackPanel>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Top"
                        Text="Mô tả:" />
                    <TextBox
                        x:Name="MoTaTextBox"
                        Width="300"
                        Height="60"
                        AcceptsReturn="True"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Đã bán:" />
                    <TextBlock
                        x:Name="DaBanTextBlock"
                        Width="300"
                        VerticalAlignment="Center" />
                </StackPanel>

                <!--  Biến thể  -->
                <TextBlock
                    Margin="0,12,0,4"
                    FontWeight="Bold"
                    Text="Biến thể" />
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBox
                        x:Name="TenBienTheTextBox"
                        Width="200"
                        Margin="0,0,10,0" />
                    <TextBox
                        x:Name="GiaBanTextBox"
                        Width="150"
                        Margin="0,0,10,0"
                        PreviewTextInput="GiaBanTextBox_PreviewTextInput"
                        TextChanged="GiaBanTextBox_TextChanged" />
                    <Button
                        Width="80"
                        Click="ThemBienTheButton_Click"
                        Content="Thêm mới" />
                    <Button
                        Width="80"
                        Margin="10,0,0,0"
                        Click="SuaBienTheButton_Click"
                        Content="Sửa" />
                </StackPanel>

                <ListBox
                    x:Name="BienTheListBox"
                    Height="150"
                    SelectionChanged="BienTheListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Width="200" Text="{Binding TenBienThe}" />
                                <TextBlock Width="100" Text="{Binding GiaBan, StringFormat={}{0:N0}}" />
                                <Button
                                    Width="24"
                                    Click="XoaBienTheButton_Click"
                                    Content="❌"
                                    DockPanel.Dock="Right"
                                    Tag="{Binding}" />
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!--  Lỗi  -->
                <TextBlock
                    x:Name="ErrorTextBlock"
                    Margin="0,10,0,0"
                    FontWeight="SemiBold"
                    Foreground="Red" />

                <!--  Nút  -->
                <StackPanel
                    Margin="0,16,0,0"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        x:Name="SaveButton"
                        Width="80"
                        Margin="0,0,8,0"
                        Click="SaveButton_Click"
                        Content="Lưu" />
                    <Button
                        Width="80"
                        Click="CloseButton_Click"
                        Content="Huỷ" />
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Border>
</Window>