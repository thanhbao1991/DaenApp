<!--  ProductEditWindow.xaml  -->
<Window
    x:Class="TraSuaApp.WpfClient.Views.ProductEditWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sản phẩm"
    AllowsTransparency="True"
    Background="#88000000"
    PreviewKeyDown="Window_KeyDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        CornerRadius="12">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Tiêu đề  -->
            <DockPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                VerticalAlignment="Center">
                <TextBlock
                    Margin="10,5"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#333"
                    Text="Sản Phẩm" />
                <Button
                    Width="28"
                    Height="28"
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Content="✖"
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#888" />
            </DockPanel>

            <!--  Nội dung form  -->
            <StackPanel Grid.Row="1">
                <!--  Thông tin sản phẩm  -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Tên sản phẩm:" />
                    <TextBox x:Name="TenTextBox" Width="300" />
                </StackPanel>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Viết tắt:" />
                    <TextBox x:Name="VietTatTextBox" Width="300" />
                </StackPanel>
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        Text="Mô tả:" />
                    <TextBox x:Name="MoTaTextBox" Width="300" />
                </StackPanel>

                <!--  Biến thể  -->
                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        Margin="0,12,0,4"
                        FontWeight="Bold"
                        Text="" />
                    <CheckBox
                        x:Name="NgungBanCheckBox"
                        Width="120"
                        Margin="0,12,0,4"
                        Content="Ngừng Bán" />
                    <CheckBox
                        x:Name="TichDiemCheckBox"
                        Width="120"
                        Margin="0,12,0,4"
                        Content="Tích điểm" />

                </StackPanel>

                <StackPanel Margin="0,0,0,8" Orientation="Horizontal">
                    <TextBlock
                        Width="120"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Text="Tên Size / Giá" />
                    <TextBox
                        x:Name="TenBienTheTextBox"
                        Width="210"
                        Margin="0,0,10,0" />
                    <TextBox
                        x:Name="GiaBanTextBox"
                        Width="80"
                        HorizontalContentAlignment="Right"
                        PreviewTextInput="GiaBanTextBox_PreviewTextInput"
                        TextChanged="GiaBanTextBox_TextChanged" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button
                        Click="ThemBienTheButton_Click"
                        Content="Thêm"
                        Style="{StaticResource ThemButtonStyle}" />
                    <Button
                        Click="SuaBienTheButton_Click"
                        Content="Sửa"
                        Style="{StaticResource SuaButtonStyle}" />
                    <Button
                        Click="XoaBienTheButton_Click"
                        Content="Xoá"
                        Style="{StaticResource XoaButtonStyle}" />
                </StackPanel>
                <ListBox
                    x:Name="BienTheListBox"
                    Height="128"
                    HorizontalContentAlignment="Stretch"
                    Background="#f0f0f0"
                    SelectionChanged="BienTheListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="32" Margin="4,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="100" />
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center" Text="{Binding TenBienThe}" />
                                <TextBlock
                                    Grid.Column="1"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    Text="{Binding GiaBan, StringFormat={}{0:N0}}" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <!--  Hiển thị lỗi  -->
                <TextBlock
                    x:Name="ErrorTextBlock"
                    Margin="0,10,0,0"
                    FontWeight="SemiBold"
                    Foreground="Red"
                    TextWrapping="Wrap" />
            </StackPanel>

            <!--  Nút Lưu / Huỷ  -->
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="SaveButton"
                    Width="80"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Content="Lưu"
                    Style="{StaticResource EditButtonStyle}" />
                <Button
                    Width="80"
                    Click="CloseButton_Click"
                    Content="Huỷ"
                    Style="{StaticResource BaseButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>