<Window
    x:Class="TraSuaApp.WpfClient.SettingsViews.KhachHangEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource EditWindowStyle}"
    WindowStartupLocation="CenterScreen">

    <Border Style="{StaticResource EditFormBorderStyle}">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <DockPanel Grid.Row="0" Style="{StaticResource EditHeaderPanelStyle}">
                <TextBlock Name="TieuDeTextBlock" Style="{StaticResource EditTitleTextStyle}" />
                <Button
                    Click="CloseButton_Click"
                    Content="✖"
                    Style="{StaticResource CloseButtonStyle}" />
            </DockPanel>

            <!--  Nội dung form  -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,4,0,4">

                    <!--  Thông tin chung  -->
                    <GroupBox Margin="0,0,0,6" Header="Thông tin khách hàng">
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,8,4"
                                VerticalAlignment="Center"
                                Text="Tên khách:" />
                            <TextBox
                                x:Name="TenTextBox"
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="260"
                                Margin="0,0,0,4"
                                Text="{Binding Model.Ten, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <!--<TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,8,4"
                                VerticalAlignment="Center"
                                Text="Món yêu thích:" />
                            <TextBox
                                x:Name="FavoriteMonTextBox"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="260"
                                Margin="0,0,0,4"
                                Text="{Binding Model.FavoriteMon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->

                            <CheckBox
                                x:Name="DuocNhanVoucherCheckBox"
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Content="Được nhận voucher"
                                IsChecked="{Binding Model.DuocNhanVoucher, Mode=TwoWay}" />
                        </Grid>
                    </GroupBox>

                    <!--  Số điện thoại  -->
                    <GroupBox Margin="0,0,0,6" Header="Số điện thoại">
                        <DockPanel Margin="4">
                            <Button
                                x:Name="AddPhoneButton"
                                Margin="0,0,0,4"
                                Padding="6,2"
                                HorizontalAlignment="Right"
                                Click="AddPhoneButton_Click"
                                Content="+ Thêm SĐT"
                                DockPanel.Dock="Top"
                                Style="{StaticResource ThemButtonStyle}" />
                            <ItemsControl x:Name="PhonesItemsControl" ItemsSource="{Binding Phones}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,2">
                                            <Button
                                                Margin="4,0,0,0"
                                                Click="DeletePhoneButton_Click"
                                                Content="✖"
                                                DockPanel.Dock="Right" 
                                                Style="{StaticResource XoaButtonStyle}" />

                                            <CheckBox
                                                Margin="8,0,8,0"
                                                VerticalAlignment="Center"
                                                Checked="PhoneDefaultCheckBox_Checked"
                                                Content="Mặc định"
                                                IsChecked="{Binding IsDefault, Mode=TwoWay}" />
                                            <TextBox
                                                Width="160"
                                                VerticalAlignment="Center"
                                                Text="{Binding SoDienThoai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DockPanel>
                    </GroupBox>

                    <!--  Địa chỉ  -->
                    <GroupBox Margin="0,0,0,6" Header="Địa chỉ">
                        <DockPanel Margin="4">
                            <Button
                                x:Name="AddAddressButton"
                                Margin="0,0,0,4"
                                Padding="6,2"
                                HorizontalAlignment="Right"
                                Click="AddAddressButton_Click"
                                Content="+ Thêm địa chỉ"
                                DockPanel.Dock="Top"
                                Style="{StaticResource ThemButtonStyle}" />

                            <ItemsControl x:Name="AddressesItemsControl" ItemsSource="{Binding Addresses}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <DockPanel Margin="0,2">
                                            <Button
                                                Margin="4,0,0,0"
                                                Click="DeleteAddressButton_Click"
                                                Content="✖"
                                                DockPanel.Dock="Right"
                                                Style="{StaticResource XoaButtonStyle}" />
                                            <CheckBox
                                                Margin="8,0,8,0"
                                                VerticalAlignment="Center"
                                                Checked="AddressDefaultCheckBox_Checked"
                                                Content="Mặc định"
                                                IsChecked="{Binding IsDefault, Mode=TwoWay}" />
                                            <TextBox
                                                Width="260"
                                                VerticalAlignment="Center"
                                                Text="{Binding DiaChi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DockPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </DockPanel>
                    </GroupBox>

                </StackPanel>
            </ScrollViewer>

            <!--  Nút lưu + lỗi  -->
            <StackPanel Grid.Row="2">
                <TextBlock x:Name="ErrorTextBlock" Style="{StaticResource ErrorTextBlock}" />
                <Button
                    Name="SaveButton"
                    Click="SaveButton_Click"
                    Content="Lưu"
                    Style="{StaticResource SaveButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
