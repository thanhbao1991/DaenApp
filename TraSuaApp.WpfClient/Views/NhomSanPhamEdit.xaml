<Window
    x:Class="TraSuaApp.WpfClient.Views.NhomSanPhamEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TraSuaApp.WpfClient.Converters"
    AllowsTransparency="True"
    Background="#88000000"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">
    <Border
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        CornerRadius="12">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Tiêu đề  -->
            <DockPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                LastChildFill="True">
                <TextBlock
                    Name="TieuDeTextBlock"
                    Margin="10,5"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#333" />
                <Button
                    Width="28"
                    Height="28"
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Content="✖"
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#888" />
            </DockPanel>

            <!--  Nội dung  -->
            <StackPanel Grid.Row="1">
                <GroupBox Margin="0,0,0,5" Header="Tên nhóm sản phẩm">
                    <StackPanel Orientation="Horizontal">
                        <TextBox
                            x:Name="TenTextBox"
                            Width="200"
                            Margin="0,0,8,0" />
                    </StackPanel>
                </GroupBox>

            </StackPanel>

            <!--  Nút và lỗi  -->
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <TextBlock
                    x:Name="ErrorTextBlock"
                    Margin="0,0,0,5"
                    Foreground="Red"
                    Style="{StaticResource ErrorTextBlock}" />
                <Button
                    x:Name="SaveButton"
                    Click="SaveButton_Click"
                    Content="Lưu"
                    Style="{StaticResource SaveButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>