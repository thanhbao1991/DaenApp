<Window
    x:Class="TraSuaApp.WpfClient.AdminViews.NguyenLieuTransactionEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource EditWindowStyle}"
    WindowStartupLocation="CenterScreen">

    <Border Style="{StaticResource EditFormBorderStyle}">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0">
                <TextBlock
                    x:Name="TieuDeTextBlock"
                    Style="{StaticResource EditTitleTextStyle}"
                    Text="Giao dịch nguyên liệu" />
                <Button
                    Click="CloseButton_Click"
                    DockPanel.Dock="Right"
                    Style="{StaticResource CloseButtonStyle}" />
            </DockPanel>

            <StackPanel Grid.Row="1">

                <Label Content="Nguyên liệu" />
                <ComboBox
                    x:Name="NguyenLieuComboBox"
                    DisplayMemberPath="Ten"
                    SelectedValuePath="Id" />

                <Label Content="Loại giao dịch" />
                <ComboBox x:Name="LoaiComboBox" />

                <Label Content="Số lượng" />
                <TextBox x:Name="SoLuongTextBox" />

                <Label Content="Ghi chú" />
                <TextBox x:Name="GhiChuTextBox" />

            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBlock x:Name="ErrorTextBlock" Style="{StaticResource ErrorTextBlock}" />
                <Button
                    Click="SaveButton_Click"
                    Content="Lưu"
                    Style="{StaticResource SaveButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
