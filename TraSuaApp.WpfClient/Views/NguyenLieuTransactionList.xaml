<Window
    x:Class="TraSuaApp.WpfClient.AdminViews.NguyenLieuTransactionList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource PopupWindowWithBorderStyle}"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock
                x:Name="TieuDeTextBlock"
                Style="{StaticResource TitleTextStyle}"
                Text="Lịch sử giao dịch nguyên liệu" />
            <Button
                Click="CloseButton_Click"
                DockPanel.Dock="Right"
                Style="{StaticResource CloseButtonStyle}" />
        </DockPanel>

        <!--  Toolbar  -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox
                x:Name="SearchTextBox"
                Style="{StaticResource SearchTextBoxStyle}"
                TextChanged="SearchTextBox_TextChanged" />

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button
                    Click="AddButton_Click"
                    Content="Thêm"
                    Style="{StaticResource AddButtonStyle}" />
                <Button
                    Click="EditButton_Click"
                    Content="Sửa"
                    Style="{StaticResource EditButtonStyle}" />
                <Button
                    Click="DeleteButton_Click"
                    Content="Xoá"
                    Style="{StaticResource DeleteButtonStyle}" />
                <Button
                    Click="ReloadButton_Click"
                    Content="Tải lại"
                    Style="{StaticResource ReloadButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  DataGrid  -->
        <DataGrid
            x:Name="NguyenLieuTransactionDataGrid"
            Grid.Row="2"
            AutoGenerateColumns="False"
            CanUserSortColumns="True"
            MouseDoubleClick="NguyenLieuTransactionDataGrid_MouseDoubleClick">

            <DataGrid.Columns>

                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding Stt}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="STT" />

                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding NgayGio, StringFormat=dd/MM/yyyy HH:mm}"
                    Header="Ngày giờ" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TenNguyenLieu}"
                    Header="Nguyên liệu" />

                <DataGridTextColumn
                    Width="90"
                    Binding="{Binding Loai}"
                    Header="Loại" />

                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding SoLuong}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Số lượng" />

                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding DonViTinh}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="ĐVT" />

                <DataGridTextColumn
                    Width="200"
                    Binding="{Binding GhiChu}"
                    Header="Ghi chú" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
