<Window
    x:Class="TraSuaApp.WpfClient.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Đăng nhập"
    Width="400"
    Height="314"
    AllowsTransparency="True"
    Background="Transparent"
    KeyDown="Window_KeyDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Background="White"
        BorderBrush="#CCC"
        BorderThickness="1"
        CornerRadius="8"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Thanh tiêu đề  -->
            <Border
                Grid.Row="0"
                Background="#2196F3"
                CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Đăng nhập" />
                    <Button
                        Width="32"
                        Height="32"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Click="CloseButton_Click"
                        Content="✖"
                        Cursor="Hand"
                        FontSize="14"
                        Foreground="White" />
                </Grid>
            </Border>

            <!--  Form đăng nhập  -->
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock
                    Margin="0,0,0,5"
                    FontWeight="SemiBold"
                    Text="Tên đăng nhập" />
                <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" />

                <TextBlock
                    Margin="0,10,0,5"
                    FontWeight="SemiBold"
                    Text="Mật khẩu" />
                <PasswordBox x:Name="PasswordBox" />

                <CheckBox
                    x:Name="RememberMeCheckBox"
                    Margin="0,10,0,0"
                    Content="Lưu đăng nhập" />

                <!--  Hiển thị lỗi  -->
                <TextBlock
                    x:Name="ErrorTextBlock"
                    MaxWidth="400"
                    MaxHeight="40"
                    Margin="0,10,0,0"
                    FontWeight="SemiBold"
                    Foreground="Red"
                    TextWrapping="Wrap" />
                <Button
                    Name="LoginButton"
                    Margin="0,20,0,0"
                    Click="LoginButton_Click"
                    Content="Đăng nhập"
                    Style="{StaticResource EditButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>