<Window
    x:Class="TraSuaApp.WpfClient.Views.LoginForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Đăng nhập"
    Width="400"
    Height="330"
    AllowsTransparency="True"
    Background="Transparent"
    FontSize="{StaticResource FontSizeNormal}"
    FontWeight="Medium"
    KeyDown="Window_KeyDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Background="{StaticResource LightBrush}"
        BorderBrush="#CCC"
        BorderThickness="1"
        CornerRadius="8"
        MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Thanh tiêu đề  -->
            <Border
                Grid.Row="0"
                Background="{StaticResource PrimaryBrush}"
                CornerRadius="8,8,0,0">
                <Grid>
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{StaticResource LightBrush}"
                        Text="Đăng nhập" />
                    <Button
                        Width="32"
                        Height="32"
                        Margin="0,0,5,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="{x:Null}"
                        Click="CloseButton_Click"
                        Content="✖"
                        Cursor="Hand"
                        Foreground="{StaticResource LightBrush}" />
                </Grid>
            </Border>

            <!--  Form đăng nhập  -->
            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Margin="0,0,0,5" Text="Tên đăng nhập" />
                <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10" />

                <TextBlock Margin="0,10,0,5" Text="Mật khẩu" />
                <PasswordBox x:Name="PasswordBox" />

                <!--  Group Tuỳ chọn  -->
                <GroupBox Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal">
                        <!--  Lưu đăng nhập  -->
                        <CheckBox
                            x:Name="RememberMeCheckBox"
                            Margin="0,0,15,0"
                            VerticalAlignment="Center"
                            Checked="RememberMeCheckBox_Checked"
                            Unchecked="RememberMeCheckBox_Unchecked">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Lưu đăng nhập" />
                            </StackPanel>
                        </CheckBox>

                        <!--  Tự động đăng nhập  -->
                        <CheckBox x:Name="AutoLoginCheckBox" VerticalAlignment="Center">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Foreground" Value="{StaticResource DarkBrush}" />
                                    <Style.Triggers>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </CheckBox.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Tự động đăng nhập" />
                            </StackPanel>
                        </CheckBox>
                    </StackPanel>
                </GroupBox>

                <Button
                    x:Name="LoginButton"
                    Margin="0,20,0,0"
                    Click="LoginButton_Click"
                    Content="Đăng nhập"
                    Style="{StaticResource AddButtonStyle}" />

                <ProgressBar
                    x:Name="LoginProgressBar"
                    Height="8"
                    Margin="0,10,0,0"
                    IsIndeterminate="True"
                    Visibility="Collapsed" />
                <TextBlock
                    x:Name="ErrorTextBlock"
                    FontSize="8"
                    Foreground="{StaticResource DangerBrush}"
                    Style="{StaticResource ErrorTextBlock}"
                    TextWrapping="Wrap"
                    Visibility="{Binding Text, Converter={StaticResource NullOrEmptyOrDefaultToVisibilityConverter}}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
