<Window
    x:Class="TraSuaApp.WpfClient.Views.TaiKhoanEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource EditWindowStyle}"
    WindowStartupLocation="CenterScreen">

    <Border Style="{StaticResource EditFormBorderStyle}">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Style="{StaticResource EditHeaderPanelStyle}">
                <TextBlock Name="TieuDeTextBlock" Style="{StaticResource EditTitleTextStyle}" />
                <Button
                    Click="CloseButton_Click"
                    Content="✖"
                    Style="{StaticResource CloseButtonStyle}" />
            </DockPanel>
            <!--  Nội dung form  -->
            <StackPanel Grid.Row="1" Margin="0,10,0,10">
                <GroupBox Margin="0,0,0,5" Header="Tên đăng nhập:">
                    <TextBox x:Name="TenDangNhapTextBox" Width="200" />
                </GroupBox>
                <GroupBox Margin="0,0,0,5" Header="Mật khẩu:">
                    <PasswordBox x:Name="MatKhauBox" Width="200" />
                </GroupBox>

                <GroupBox Margin="0,0,0,5" Header="Tên hiển thị:">
                    <TextBox x:Name="TenHienThiTextBox" Width="200" />
                </GroupBox>

                <GroupBox Margin="0,0,0,5" Header="Vai trò:">
                    <ComboBox x:Name="VaiTroComboBox" Width="200">
                        <ComboBoxItem Content="Admin" />
                        <ComboBoxItem Content="Nhân viên" />
                    </ComboBox>
                </GroupBox>

                <CheckBox
                    x:Name="IsActiveCheckBox"
                    VerticalAlignment="Center"
                    Content="Hoạt động" />


            </StackPanel>

            <!--  Nút và lỗi  -->
            <StackPanel Grid.Row="2">
                <TextBlock x:Name="ErrorTextBlock" Style="{StaticResource ErrorTextBlock}" />
                <Button
                    Name="SaveButton"
                    Click="SaveButton_Click"
                    Content="Lưu"
                    Style="{StaticResource SaveButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>