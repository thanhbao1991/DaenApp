<Window
    x:Class="TraSuaApp.WpfClient.Views.TaiKhoanEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    AllowsTransparency="True"
    Background="#88888888"
    PreviewKeyDown="Window_KeyDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        CornerRadius="12">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Tiêu đề  -->
            <DockPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                LastChildFill="True">
                <TextBlock
                    Name="TieuDeTextBlock"
                    Margin="10,5"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#333" />

                <Button
                    Width="28"
                    Height="28"
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Content="✖"
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#888" />
            </DockPanel>

            <!--  Nội dung form  -->
            <StackPanel Grid.Row="1" Margin="0,10,0,10">
                <GroupBox Margin="0,0,0,5" Header="Tên đăng nhập:">
                    <TextBox x:Name="TenDangNhapTextBox" Width="240" />
                </GroupBox>
                <GroupBox Margin="0,0,0,5" Header="Mật khẩu:">
                    <PasswordBox x:Name="MatKhauBox" Width="240" />
                </GroupBox>

                <GroupBox Margin="0,0,0,5" Header="Tên hiển thị:">
                    <TextBox x:Name="TenHienThiTextBox" Width="240" />
                </GroupBox>

                <GroupBox Margin="0,0,0,5" Header="Vai trò:">
                    <ComboBox x:Name="VaiTroComboBox" Width="240">
                        <ComboBoxItem Content="Admin" />
                        <ComboBoxItem Content="Nhân viên" />
                    </ComboBox>
                </GroupBox>

                <CheckBox
                    x:Name="IsActiveCheckBox"
                    VerticalAlignment="Center"
                    Content="Hoạt động" />


            </StackPanel>

            <!--  Nút và lỗi  -->
            <StackPanel Grid.Row="2" Orientation="Vertical">
                <TextBlock
                    x:Name="ErrorTextBlock"
                    Margin="0,0,0,5"
                    Foreground="Red"
                    Style="{StaticResource ErrorTextBlock}" />
                <Button
                    x:Name="SaveButton"
                    Click="SaveButton_Click"
                    Content="Lưu"
                    Style="{StaticResource SaveButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>