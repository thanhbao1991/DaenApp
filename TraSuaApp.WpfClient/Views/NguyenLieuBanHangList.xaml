<Window
    x:Class="TraSuaApp.WpfClient.AdminViews.NguyenLieuBanHangList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource PopupWindowWithBorderStyle}"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Tiêu đề  -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Name="TieuDeTextBlock" Style="{StaticResource TitleTextStyle}" />
            <Button
                Click="CloseButton_Click"
                DockPanel.Dock="Right"
                Style="{StaticResource CloseButtonStyle}" />
        </DockPanel>

        <!--  Thanh công cụ  -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Ô tìm kiếm  -->
            <Grid Margin="0,0,4,0">
                <TextBox
                    x:Name="SearchTextBox"
                    Style="{StaticResource SearchTextBoxStyle}"
                    TextChanged="SearchTextBox_TextChanged" />
                <TextBlock
                    Style="{StaticResource SearchHintTextStyle}"
                    Text="Tìm kiếm..."
                    Visibility="{Binding Text.IsEmpty, ElementName=SearchTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>

            <!--  Nút  -->
            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="AddButton_Click"
                    Content="Thêm"
                    Style="{StaticResource AddButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="EditButton_Click"
                    Content="Sửa"
                    Style="{StaticResource EditButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="DeleteButton_Click"
                    Content="Xoá"
                    Style="{StaticResource DeleteButtonStyle}" />
                <Button
                    Width="80"
                    Click="ReloadButton_Click"
                    Content="Tải lại"
                    Style="{StaticResource ReloadButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  Danh sách  -->
        <DataGrid
            x:Name="NguyenLieuBanHangDataGrid"
            Grid.Row="2"
            Margin="10"
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            IsReadOnly="True"
            MouseDoubleClick="NguyenLieuBanHangDataGrid_MouseDoubleClick">

            <DataGrid.Columns>
                <!--  STT  -->
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding Stt}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="STT" />

                <!--  Từ khoá không dấu  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Ten}"
                    ElementStyle="{StaticResource LeftTextCellStyle}"
                    Header="Tên" />

                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding TonKho}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Tồn kho" />

                <!--  Đơn vị bán  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DonViTinh}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="Đơn vị bán" />

                <!--  Đang sử dụng  -->
                <DataGridCheckBoxColumn
                    Width="90"
                    Binding="{Binding DangSuDung}"
                    Header="Đang dùng" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>