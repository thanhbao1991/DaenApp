<UserControl
    x:Class="TraSuaApp.WpfClient.Controls.MessengerTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf">

    <DockPanel>
        <!--  Thanh nút  -->
        <StackPanel
            Margin="4"
            HorizontalAlignment="Center"
            DockPanel.Dock="Top"
            Orientation="Horizontal">

            <Button
                x:Name="CreateOrderButton"
                Margin="2"
                Padding="6,2"
                Click="CreateOrderFromText_Click"
                Content="Text → Đơn" />
            <Button
                Margin="2"
                Padding="6,2"
                Click="CreateOrderFromImage_Click"
                Content="Ảnh → Đơn" />
            <Button
                Margin="2"
                Padding="6,2"
                Click="ReloadButton_Click"
                Content="Reload ↻" />
        </StackPanel>

        <!--  WebView2  -->
        <wv2:WebView2 x:Name="WebView" />
    </DockPanel>
</UserControl>