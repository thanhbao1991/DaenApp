<UserControl
    x:Class="TraSuaApp.WpfClient.Views.ThongKeTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#f6f6f6"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="ClearType"
    UseLayoutRounding="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Thanh điều hướng ngày  -->
        <StackPanel
            Grid.Row="0"
            Margin="8"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                x:Name="PrevButton"
                Margin="0,0,8,0"
                Click="PrevButton_Click"
                Style="{StaticResource AddButtonStyle}">
                Ngày trước
            </Button>
            <Border
                Padding="8,4"
                VerticalAlignment="Stretch"
                Background="#EEE"
                CornerRadius="6">
                <TextBlock
                    x:Name="DateTextBlock"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="{StaticResource DarkBrush}"
                    Text="--/--/----" />
            </Border>
            <Button
                x:Name="NextButton"
                Margin="8,0,8,0"
                Click="NextButton_Click"
                Style="{StaticResource AddButtonStyle}">
                Ngày sau
            </Button>
        </StackPanel>

        <!--  Layout chính  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Card kết quả bên trái  -->
            <Border
                Grid.Column="0"
                Margin="10"
                Padding="10"
                Background="White"
                BorderBrush="{StaticResource SecondaryBrush}"
                BorderThickness="1"
                CornerRadius="12"
                SnapsToDevicePixels="True">
                <ScrollViewer Foreground="{StaticResource DarkBrush}" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="KetQuaStackPanel" />
                </ScrollViewer>
            </Border>

            <!--  Phải: TopSP + 7 card  -->
            <UniformGrid
                Grid.Column="1"
                Margin="5"
                Columns="4"
                Rows="0"
                SnapsToDevicePixels="True">

                <!--  ✅ Top sản phẩm bán chạy — Primary  -->
                <Border
                    Margin="5"
                    Padding="10"
                    Background="{StaticResource PrimaryBrush}"
                    CornerRadius="8">
                    <ScrollViewer Foreground="{StaticResource PrimaryForeground}" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="TopSanPhamStackPanel" />
                    </ScrollViewer>
                </Border>

                <!--  Doanh thu — Success  -->
                <Border
                    Margin="5"
                    Padding="10"
                    Background="{StaticResource SuccessBrush}"
                    CornerRadius="8">
                    <ScrollViewer Foreground="{StaticResource SuccessForeground}" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="DoanhThuStackPanel" />
                    </ScrollViewer>
                </Border>

                <!--  Chi tiêu — Warning  -->
                <Border
                    Margin="5"
                    Padding="10"
                    Background="{StaticResource WarningBrush}"
                    CornerRadius="8">
                    <ScrollViewer Foreground="{StaticResource WarningForeground}" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChiTieuStackPanel" />
                    </ScrollViewer>
                </Border>

                <!--  Công nợ — Danger  -->
                <Border
                    Margin="5"
                    Padding="10"
                    Background="{StaticResource DangerBrush}"
                    CornerRadius="8">
                    <ScrollViewer Foreground="{StaticResource DangerForeground}" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="CongNoStackPanel" />
                    </ScrollViewer>
                </Border>

                <!--  Trả nợ tiền — Secondary  -->
                <Border
                    Margin="5"
                    Padding="10"
                    Background="{StaticResource SecondaryBrush}"
                    CornerRadius="8">
                    <ScrollViewer Foreground="{StaticResource SecondaryForeground}" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="TraNoTienStackPanel" />
                    </ScrollViewer>
                </Border>

                <!--  Trả nợ bank — Info  -->
                <Border
                    Margin="5"
                    Padding="10"
                    Background="{StaticResource InfoBrush}"
                    CornerRadius="8">
                    <ScrollViewer Foreground="{StaticResource InfoForeground}" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="TraNoBankStackPanel" />
                    </ScrollViewer>
                </Border>

                <!--  Đã thu — Dark  -->
                <Border
                    Margin="5"
                    Padding="10"
                    Background="{StaticResource DarkBrush}"
                    CornerRadius="8">
                    <ScrollViewer Foreground="{StaticResource DarkForeground}" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="DaThuStackPanel" />
                    </ScrollViewer>
                </Border>

                <!--  Chưa thu — Light  -->
                <Border
                    Margin="5"
                    Padding="10"
                    Background="{StaticResource LightBrush}"
                    CornerRadius="8">
                    <ScrollViewer Foreground="{StaticResource LightForeground}" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ChuaThuStackPanel" />
                    </ScrollViewer>
                </Border>

            </UniformGrid>
        </Grid>
    </Grid>
</UserControl>