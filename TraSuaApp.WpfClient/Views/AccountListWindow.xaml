<Window
    x:Class="TraSuaApp.WpfClient.Views.AccountListWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Danh sách tài khoản"
    Width="800"
    Height="520"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        CornerRadius="12">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Thanh tiêu đề  -->
            <DockPanel
                Grid.Row="0"
                Margin="0,0,0,10"
                VerticalAlignment="Center">
                <TextBlock
                    Margin="10,5"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#333"
                    Text="Tài khoản" />
                <Button
                    Width="28"
                    Height="28"
                    Margin="0,5,5,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="CloseButton_Click"
                    Content="✖"
                    Cursor="Hand"
                    DockPanel.Dock="Right"
                    FontSize="14"
                    Foreground="#888" />
            </DockPanel>

            <!--  Thanh công cụ  -->
            <Grid Grid.Row="1" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Ô tìm kiếm  -->
                <Grid Margin="0,0,4,0">
                    <TextBox
                        x:Name="SearchTextBox"
                        Padding="10,0"
                        VerticalContentAlignment="Center"
                        FontSize="14"
                        TextChanged="SearchTextBox_TextChanged" />

                    <!--  Placeholder  -->
                    <TextBlock
                        Margin="12,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="Gray"
                        IsHitTestVisible="False"
                        Text="Tìm kiếm..."
                        Visibility="{Binding Text.IsEmpty, ElementName=SearchTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
                </Grid>

                <!--  Các nút thao tác  -->
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="80"
                        Click="AddButton_Click"
                        Content="Thêm"
                        Style="{StaticResource AddButtonStyle}" />
                    <Button
                        Width="80"
                        Click="EditButton_Click"
                        Content="Sửa"
                        Style="{StaticResource EditButtonStyle}" />
                    <Button
                        Width="80"
                        Click="DeleteButton_Click"
                        Content="Xoá"
                        Style="{StaticResource DeleteButtonStyle}" />
                    <Button
                        Width="80"
                        Click="ReloadButton_Click"
                        Content="Tải lại"
                        Style="{StaticResource ReloadButtonStyle}" />
                </StackPanel>
            </Grid>

            <!--  Danh sách tài khoản  -->
            <DataGrid
                x:Name="AccountDataGrid"
                Grid.Row="2"
                Margin="10"
                MouseDoubleClick="AccountDataGrid_MouseDoubleClick">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="50"
                        Binding="{Binding STT}"
                        ElementStyle="{StaticResource CenterTextCellStyle}"
                        Header="STT" />

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding TenDangNhap}"
                        ElementStyle="{StaticResource CenterTextCellStyle}"
                        Header="Tài khoản" />

                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding TenHienThi}"
                        ElementStyle="{StaticResource CenterTextCellStyle}"
                        Header="Tên hiển thị" />

                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding VaiTro}"
                        ElementStyle="{StaticResource CenterTextCellStyle}"
                        Header="Vai trò" />

                    <DataGridCheckBoxColumn
                        Width="80"
                        Binding="{Binding IsActive}"
                        ElementStyle="{StaticResource CenteredDataGridCheckBoxStyle}"
                        Header="Kích hoạt" />

                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding ThoiGianTao, StringFormat={}{0:dd/MM/yyyy}}"
                        ElementStyle="{StaticResource CenterTextCellStyle}"
                        Header="Ngày tạo" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Window>