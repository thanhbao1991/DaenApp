<Window
    x:Class="TraSuaApp.WpfClient.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:TraSuaApp.WpfClient.Controls"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
    xmlns:views="clr-namespace:TraSuaApp.WpfClient.Views"
    Title="Dashboard"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="Window_Closing"
    FontSize="{StaticResource FontSizeNormal}"
    FontWeight="Medium"
    PreviewKeyDown="Window_PreviewKeyDown"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None">

    <Border Background="#F5F5F5" CornerRadius="10">
        <Grid>
            <ctrl:NotiPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="3"
                CompactHeight="38"
                CompactWidth="120"
                ExpandedHeight="500"
                ExpandedWidth="300"
                Visibility="Collapsed" />
            <ProgressBar
                x:Name="ProgressBar"
                Height="20"
                VerticalAlignment="Bottom"
                Panel.ZIndex="2"
                IsIndeterminate="True"
                Visibility="Collapsed" />
            <TabControl
                Name="TabControl"
                Grid.Row="0"
                Grid.Column="0"
                Margin="4"
                Background="{StaticResource SuccessBrush}"
                SelectionChanged="TabControl_SelectionChanged">
                <TabItem
                    x:Name="MessengerTabItem"
                    Header="Messenger"
                    Tag="Messenger">
                    <ctrl:MessengerTab x:Name="MessengerView" />
                </TabItem>
                <TabItem Header="Thống kê" Tag="ThongKe">
                    <views:ThongKeTab />
                </TabItem>
                <TabItem Header="Hóa đơn " Tag="HoaDon">
                    <views:HoaDonTab x:Name="HoaDonTabControl" />
                </TabItem>
                <TabItem Header="Thanh toán " Tag="ChiTietHoaDonThanhToan">
                    <views:ChiTietHoaDonThanhToanTab x:Name="ChiTietHoaDonThanhToanTabControl" />
                </TabItem>
                <TabItem Header="Công nợ " Tag="ChiTietHoaDonNo">
                    <views:ChiTietHoaDonNoTab x:Name="ChiTietHoaDonNoTabControl" />
                </TabItem>
                <TabItem Header="Chi tiêu " Tag="ChiTieuHangNgay">
                    <views:ChiTieuHangNgayTab x:Name="ChiTieuHangNgayTabControl" />
                </TabItem>
                <TabItem x:Name="CongViecTab" Tag="CongViecTab">
                    <TabItem.Header>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                            <TextBlock Text="Công việc" />
                            <Border
                                x:Name="CvBadge"
                                Height="20"
                                MinWidth="22"
                                Margin="5,0,0,0"
                                Background="#E53935"
                                CornerRadius="10"
                                Visibility="Collapsed">
                                <TextBlock
                                    x:Name="CvBadgeText"
                                    Margin="4,0,4,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="0"
                                    TextAlignment="Center" />
                            </Border>
                        </StackPanel>
                    </TabItem.Header>
                    <views:CongViecNoiBoTab x:Name="CongViecNoiBoTab" />
                </TabItem>
                <TabItem x:Name="ReportsTab" Tag="ReportsLauncher">
                    <TabItem.Header>
                        <!--  Click vào header để mở ContextMenu  -->
                        <Border
                            Cursor="Hand"
                            MouseLeftButtonDown="ReportsHeader_MouseLeftButtonDown"
                            MouseRightButtonDown="ReportsHeader_MouseLeftButtonDown">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="ReportsHeaderText" Text="Báo cáo" />
                                <TextBlock Text="  ▼" />
                            </StackPanel>

                            <Border.ContextMenu>
                                <ContextMenu x:Name="ReportsContextMenu">
                                    <MenuItem
                                        Padding="8"
                                        Click="ReportMenu_Click"
                                        Header="Ứng Nhã"
                                        Tag="UngNha" />
                                    <MenuItem
                                        Padding="8"
                                        Click="ReportMenu_Click"
                                        Header="Chi Tiêu"
                                        Tag="ChiTieu" />
                                    <MenuItem
                                        Padding="8"
                                        Click="ReportMenu_Click"
                                        Header="Vouchers"
                                        Tag="Vouchers" />
                                    <MenuItem
                                        Padding="8"
                                        Click="ReportMenu_Click"
                                        Header="TOP Sản Phẩm"
                                        Tag="SanPham" />
                                    <MenuItem
                                        Padding="8"
                                        Click="ReportMenu_Click"
                                        Header="TOP Khách Hàng"
                                        Tag="KhachHang" />
                                    <Separator />
                                    <MenuItem
                                        Padding="8"
                                        Click="ReportMenu_Click"
                                        Header="Xoá"
                                        Tag="__Clear" />
                                </ContextMenu>
                            </Border.ContextMenu>
                        </Border>
                    </TabItem.Header>
                    <Grid>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontStyle="Italic"
                            Opacity="0.7"
                            Text="Chọn báo cáo từ tiêu đề tab..." />
                    </Grid>
                </TabItem>
            </TabControl>

            <Grid
                x:Name="Menu"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="1"
                Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Menu
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Visibility="Visible">
                    <MenuItem
                        Name="SettingsMenu"
                        Margin="4"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Header="Cài đặt">
                        <MenuItem
                            Name="AdminMenu"
                            Margin="4"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Header="Admin" />
                    </MenuItem>
                    <MenuItem
                        Name="HoaDonMenu"
                        Margin="4"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Header="Hoá đơn" />
                </Menu>

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                    Visibility="Visible">
                    <Button
                        Width="30"
                        Height="30"
                        Margin="4"
                        Padding="8"
                        Click="MinimizeButton_Click"
                        Content="—"
                        Style="{StaticResource TitleBarButtonStyle}" />
                    <Button
                        Width="30"
                        Height="30"
                        Margin="4"
                        Padding="8"
                        Click="MaximizeButton_Click"
                        Content="◻"
                        Style="{StaticResource TitleBarButtonStyle}" />
                    <Button
                        Width="30"
                        Height="30"
                        Margin="4"
                        Padding="8"
                        Click="CloseButton_Click"
                        Content="✕"
                        Style="{StaticResource CloseTitleBarButtonStyle}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>