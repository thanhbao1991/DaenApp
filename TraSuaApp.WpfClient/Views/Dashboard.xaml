                                                    <fa:IconBlock Margin="0,0,5,0" Icon="Trash" />
                                                    <TextBlock Text="Xoá" />
                                                </StackPanel>
                                            </Button>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

