<Window
    x:Class="TraSuaApp.WpfClient.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrl="clr-namespace:TraSuaApp.WpfClient.Controls"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
    Title="Dashboard"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="Window_Closing"
    FontSize="{StaticResource FontSizeNormal}"
    FontWeight="Medium"
    PreviewKeyDown="Window_PreviewKeyDown"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None">

    <Border Background="#F5F5F5" CornerRadius="10">
        <Grid>
            <TextBlock
                Name="ThongBaoTextBlock"
                Margin="45"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="2"
                FontSize="{StaticResource FontSizeLarge}"
                FontWeight="Bold"
                Foreground="{StaticResource InfoBrush}"
                Text="Dashboard" />
            <ProgressBar
                x:Name="ProgressBar"
                Height="16"
                VerticalAlignment="Bottom"
                Panel.ZIndex="2"
                IsIndeterminate="True"
                Visibility="Collapsed" />
            <TabControl
                Name="TabControl"
                Grid.Row="0"
                Grid.Column="0"
                Margin="4"
                Background="#4CAF50"
                SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="Thống kê hôm nay" Tag="ThongKeHomNay">
                    <Grid Background="#f6f6f6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <UniformGrid
                            Margin="10"
                            Columns="5"
                            Rows="0">
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#388E3C"
                                CornerRadius="8">
                                <StackPanel x:Name="DoanhThuStackPanel" />
                            </Border>

                            <Border
                                Margin="5"
                                Padding="10"
                                Background="LightYellow"
                                CornerRadius="8">
                                <StackPanel x:Name="BankingStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#F57C00"
                                CornerRadius="8">
                                <StackPanel x:Name="ChiTieuStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#D32F2F"
                                CornerRadius="8">
                                <StackPanel x:Name="CongNoStackPanel" />
                            </Border>
                            <Border
                                Name="MangVeBorder"
                                Margin="5"
                                Padding="10"
                                Background="#00838F"
                                CornerRadius="8">
                                <StackPanel x:Name="MangVeStackPanel" Background="#00838F" />
                            </Border>

                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#7B1FA2"
                                CornerRadius="8">
                                <StackPanel x:Name="TraNoTienStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#455A64"
                                CornerRadius="8">
                                <StackPanel x:Name="TraNoBankStackPanel" />
                            </Border>

                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#1976D2"
                                CornerRadius="8">
                                <StackPanel x:Name="DaThuStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#FBC02D"
                                CornerRadius="8">
                                <StackPanel x:Name="ChuaThuStackPanel" />
                            </Border>

                        </UniformGrid>
                        <Grid Grid.Column="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBox x:Name="SearchBanNhieuTextBox" Visibility="Collapsed" />
                            <DataGrid
                                x:Name="BanNhieuGrid"
                                Margin="5"
                                AutoGenerateColumns="False"
                                HorizontalScrollBarVisibility="Hidden"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <!--<DataGridTextColumn
                                        Binding="{Binding Stt}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="STT" />-->
                                    <!--<DataGridTextColumn
                                        Binding="{Binding Ngay, StringFormat=dd-MM-yyyy}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="Ngày" />-->
                                    <DataGridTextColumn
                                        Binding="{Binding TenSanPham}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="Tên món" />
                                    <DataGridTextColumn
                                        Binding="{Binding SoLuong}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="Đã bán" />
                                    <DataGridTextColumn
                                        Binding="{Binding DoanhThu, StringFormat=N0}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="Doanh thu" />
                                    <!--<DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding TyLeDoanhThu}"
                                        ElementStyle="{StaticResource LeftTextCellStyle}" />-->

                                </DataGrid.Columns>
                            </DataGrid>
                            <ScrollViewer
                                Grid.Row="1"
                                Margin="5"
                                VerticalScrollBarVisibility="Auto">
                                <TextBlock
                                    Name="DuDoanDoanhThu"
                                    Margin="10"
                                    Foreground="Green"
                                    Text="{Binding DuDoanText}"
                                    TextWrapping="Wrap" />
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Hóa đơn hôm nay" Tag="HoaDon">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="175" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBox
                            x:Name="SearchHoaDonTextBox"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            AcceptsReturn="True"
                            LostFocus="SearchHoaDonTextBox_LostFocus"
                            TextChanged="SearchHoaDonTextBox_TextChanged" />
                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Panel.ZIndex="1"
                            Orientation="Horizontal">
                            <Button
                                Margin="8,0,0,0"
                                HorizontalAlignment="Left"
                                Panel.ZIndex="1"
                                Click="AddAIButton_Click"
                                Foreground="{StaticResource DarkBrush}"
                                Style="{StaticResource XoaButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Margin="0,0,5,0" Icon="Robot" />
                                    <TextBlock Text="Order Nhanh" />
                                </StackPanel>
                            </Button>

                            <Button
                                HorizontalAlignment="Left"
                                Panel.ZIndex="1"
                                Click="AddTaiChoButton_Click"
                                FontSize="{StaticResource FontSizeLarge}"
                                Style="{StaticResource SuaButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Margin="0,0,5,0" Icon="Chair" />
                                    <TextBlock Text="Tại chỗ" />
                                </StackPanel>
                            </Button>

                            <Button
                                Margin="8,0,0,0"
                                HorizontalAlignment="Left"
                                Panel.ZIndex="1"
                                Click="AddMuaVeButton_Click"
                                FontSize="{StaticResource FontSizeLarge}"
                                Style="{StaticResource TaiLaiButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Margin="0,0,5,0" Icon="ShoppingBag" />
                                    <TextBlock Text="Mua về" />
                                </StackPanel>
                            </Button>
                            <Button
                                Margin="8,0,0,0"
                                HorizontalAlignment="Left"
                                Panel.ZIndex="1"
                                Click="AddShipButton_Click"
                                FontSize="{StaticResource FontSizeLarge}"
                                Style="{StaticResource ThemButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Margin="0,0,5,0" Icon="Motorcycle" />
                                    <TextBlock Text="Ship" />
                                </StackPanel>
                            </Button>


                            <Button
                                Margin="8,0,0,0"
                                HorizontalAlignment="Left"
                                Panel.ZIndex="1"
                                Click="AddAppButton_Click"
                                FontSize="{StaticResource FontSizeLarge}"
                                Style="{StaticResource XoaButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Margin="0,0,5,0" Icon="Mobile" />
                                    <TextBlock Text="App" />
                                </StackPanel>
                            </Button>


                        </StackPanel>

                        <DataGrid
                            x:Name="HoaDonDataGrid"
                            Grid.Row="1"
                            Grid.Column="1"
                            AutoGenerateColumns="False"
                            FontWeight="Bold"
                            IsReadOnly="True"
                            MouseDoubleClick="HoaDonDataGrid_MouseDoubleClick"
                            SelectionChanged="HoaDonDataGrid_SelectionChangedAsync"
                            Visibility="Visible">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DaThuHoacGhiNo}" Value="True">
                                            <Setter Property="FontWeight" Value="Normal" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>

                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Binding="{Binding Stt}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="STT" />
                                <DataGridTextColumn
                                    Binding="{Binding GioHienThi}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Giờ" />
                                <DataGridTemplateColumn Width="48" Header="">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid Height="32">
                                                <fa:IconBlock
                                                    x:Name="StatusIcon"
                                                    Width="20"
                                                    Height="20"
                                                    Loaded="StatusIcon_Loaded"
                                                    Opacity="1"
                                                    Visibility="Collapsed" />
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="2*"
                                    Binding="{Binding Ten}"
                                    Header="Tên bàn/khách">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style BasedOn="{StaticResource LeftTextCellStyle}" TargetType="TextBlock">
                                            <Setter Property="Background" Value="{Binding RowBackground}" />
                                            <Setter Property="Foreground" Value="{Binding RowForeground}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DaThuHoacGhiNo}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding GhiChuShipper}"
                                    ElementStyle="{StaticResource RightTextCellStyle}"
                                    Header="Shipper" />

                            </DataGrid.Columns>
                        </DataGrid>

                        <Grid
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="0"
                            Background="#f0f0f0">
                            <StackPanel x:Name="HoaDonButtonStack" Margin="8">
                                <Button
                                    Name="EscButton"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="EscButton_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Motorcycle" />
                                        <TextBlock Margin="5,0,0,0" Text=" Esc - KHÁNH" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="F1Button"
                                    Margin="5"
                                    Background="LightGreen"
                                    Click="F1Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="Black"
                                            Icon="MoneyBill" />
                                        <TextBlock Margin="5,0,0,0" Text=" F1 - Tiền mặt" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F2Button"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="F2Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Print" />
                                        <TextBlock Margin="5,0,0,0" Text=" F2 - In bill" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F3Button"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="F3Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="ShareSquare" />
                                        <TextBlock Margin="5,0,0,0" Text=" F3 - Gửi bill" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F4Button"
                                    Margin="5"
                                    Background="LightYellow"
                                    Click="F4Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="Black"
                                            Icon="CreditCard" />
                                        <TextBlock Margin="5,0,0,0" Text=" F4 - Chuyển khoản" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F12Button"
                                    Margin="5"
                                    Background="IndianRed"
                                    Click="F12Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="PencilAlt" />
                                        <TextBlock Margin="5,0,0,0" Text=" F12 - Ghi nợ" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="DelButton"
                                    Margin="5"
                                    Click="DelButton_Click"
                                    Foreground="White"
                                    Style="{StaticResource DeleteButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Trash" />
                                        <TextBlock Margin="5,0,0,0" Text=" Del - Xoá" />
                                    </StackPanel>
                                </Button>


                                <Button
                                    Name="F5Button"
                                    Margin="5"
                                    Background="Transparent"
                                    Click="F5Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="Black"
                                            Icon="Refresh" />
                                        <TextBlock Margin="5,0,0,0" Text=" F5 - Làm mới" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F6Button"
                                    Margin="5"
                                    Background="Transparent"
                                    Click="F6Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Icon="Qrcode" />
                                        <TextBlock Margin="5,0,0,0" Text=" F6 - Gửi Stk" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F7Button"
                                    Margin="5"
                                    Background="Transparent"
                                    Click="F7Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Icon="Bell" />
                                        <TextBlock Margin="5,0,0,0" Text=" F7 - Báo đơn" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F8Button"
                                    Margin="5"
                                    Background="Transparent"
                                    Click="F8Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Icon="Star" />
                                        <TextBlock Margin="5,0,0,0" Text="F8 - Ưu tiên" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F9Button"
                                    Margin="5"
                                    Background="Transparent"
                                    Click="F9Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Icon="Book" />
                                        <TextBlock Margin="5,0,0,0" Text=" F9 - Gửi Menu" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F10Button"
                                    Margin="5"
                                    Background="Transparent"
                                    Click="F10Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Icon="Clock" />
                                        <TextBlock Margin="5,0,0,0" Text=" F10 - Hẹn giờ" />
                                    </StackPanel>
                                </Button>
                                <StackPanel
                                    Name="HenGioStackPanel"
                                    Margin="5"
                                    Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <ComboBox x:Name="GioCombo" />
                                        <TextBlock VerticalAlignment="Center" Text=":" />
                                        <ComboBox x:Name="PhutCombo" />
                                        <Button
                                            x:Name="OkHenGio"
                                            Click="OkHenGioButton_Click"
                                            Content="OK"
                                            Style="{StaticResource ThemButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>

                                <Button
                                    Name="HisButton"
                                    Margin="5"
                                    Background="Transparent"
                                    Click="HisButton_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Icon="History" />
                                        <TextBlock Margin="5,0,0,0" Text=" Lịch sử" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="AppButton"
                                    Margin="5"
                                    Click="AppButton_Click"
                                    Foreground="White"
                                    Style="{StaticResource ReloadButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Heart" />
                                        <TextBlock Margin="5,0,0,0" Text="App Shipping" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <Grid
                            Grid.Row="1"
                            Grid.Column="2"
                            Background="{Binding ElementName=ThongTinThanhToanGroupBox, Path=Background}">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                x:Name="TenHoaDonTextBlock"
                                Padding="8"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="{StaticResource FontSizeLarge}"
                                FontWeight="Bold"
                                Foreground="{Binding ElementName=ThongTinThanhToanGroupBox, Path=Foreground}"
                                TextAlignment="Center" />
                            <ListBox
                                x:Name="ChiTietHoaDonListBox"
                                Grid.Row="1"
                                Background="Transparent"
                                BorderThickness="0"
                                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                ScrollViewer.VerticalScrollBarVisibility="Auto"
                                SelectionChanged="ChiTietHoaDonListBox_SelectionChanged">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Grid.Column="0"
                                                Background="Gray"
                                                BorderBrush="LightGray"
                                                BorderThickness="1,1,0,1"
                                                CornerRadius="4,0,0,4">
                                                <TextBlock
                                                    Padding="8"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    FontSize="{StaticResource FontSizeBig}"
                                                    FontWeight="Medium"
                                                    Foreground="White"
                                                    Text="{Binding SoLuong}" />
                                            </Border>
                                            <Border
                                                Grid.Column="1"
                                                Padding="8"
                                                Background="White"
                                                BorderBrush="LightGray"
                                                BorderThickness="0,1,1,1"
                                                CornerRadius="0,4,4,0">
                                                <Grid VerticalAlignment="Center">
                                                    <StackPanel>
                                                        <!--  Ngày giờ  -->
                                                        <TextBlock
                                                            HorizontalAlignment="Right"
                                                            FontSize="{StaticResource FontSizeSmall}"
                                                            Text="{Binding NgayGio, StringFormat=dd-MM-yyyy HH:mm}"
                                                            Visibility="{Binding NgayGio, Converter={StaticResource NullOrEmptyOrDefaultToVisibilityConverter}}" />
                                                        <!--  Tên sản phẩm + biến thể  -->
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock
                                                                FontWeight="Bold"
                                                                Foreground="Blue"
                                                                Text="{Binding TenSanPham}" />
                                                            <TextBlock
                                                                Margin="4,0,0,0"
                                                                FontWeight="Medium"
                                                                Foreground="Red"
                                                                Text="{Binding TenBienThe}">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Visible" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding TenBienThe}" Value="Size Chuẩn">
                                                                                <Setter Property="Visibility" Value="Collapsed" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding TenBienThe}" Value="Size L">
                                                                                <DataTrigger.EnterActions>
                                                                                    <BeginStoryboard>
                                                                                        <Storyboard AutoReverse="True" RepeatBehavior="Forever">
                                                                                            <DoubleAnimation
                                                                                                Storyboard.TargetProperty="Opacity"
                                                                                                From="1.0"
                                                                                                To="0.3"
                                                                                                Duration="0:0:0.5" />
                                                                                        </Storyboard>
                                                                                    </BeginStoryboard>
                                                                                </DataTrigger.EnterActions>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                            <TextBlock
                                                                Margin="4,0,0,0"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Center"
                                                                FontWeight="Bold"
                                                                Foreground="DarkRed"
                                                                Text="{Binding ThanhTien, StringFormat={}{0:n0} đ}" />

                                                        </StackPanel>
                                                        <!--<Grid
                                                            Grid.IsSharedSizeScope="True"
                                                            IsEnabled="False"
                                                            IsHitTestVisible="False">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="auto" SharedSizeGroup="ColSL" />
                                                                <ColumnDefinition Width="auto" SharedSizeGroup="ColGia" />
                                                                <ColumnDefinition Width="auto" SharedSizeGroup="ColTT" />
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel
                                                                Grid.Column="0"
                                                                HorizontalAlignment="Center"
                                                                Orientation="Horizontal">
                                                                <ctrl:NumericUpDown Grid.Column="0" Value="{Binding SoLuong, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                            </StackPanel>
                                                            <ctrl:MoneyTextBox
                                                                Grid.Column="1"
                                                                HorizontalContentAlignment="Right"
                                                                VerticalContentAlignment="Center"
                                                                BorderBrush="Transparent"
                                                                Value="{Binding DonGia, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        </Grid>-->

                                                        <!--  Topping  -->
                                                        <TextBlock
                                                            FontSize="{StaticResource FontSizeSmall}"
                                                            Foreground="DarkGreen"
                                                            Text="{Binding ToppingText}"
                                                            TextWrapping="Wrap"
                                                            Visibility="{Binding ToppingText, Converter={StaticResource NullOrEmptyOrDefaultToVisibilityConverter}}" />
                                                        <!--  Ghi chú  -->
                                                        <TextBox
                                                            AcceptsReturn="True"
                                                            Background="Transparent"
                                                            BorderBrush="Transparent"
                                                            FontSize="{StaticResource FontSizeSmall}"
                                                            FontStyle="Italic"
                                                            Foreground="DarkOrange"
                                                            Text="{Binding NoteText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                            TextWrapping="Wrap"
                                                            Visibility="{Binding NoteText, Converter={StaticResource NullOrEmptyOrDefaultToVisibilityConverter}}" />

                                                        <TextBlock
                                                            Margin="0,0,0,2"
                                                            FontSize="{StaticResource FontSizeSmall}"
