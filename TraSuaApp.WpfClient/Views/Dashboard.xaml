                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Công việc " Tag="CongViecNoiBo">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
