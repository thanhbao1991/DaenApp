                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                HorizontalAlignment="Left"
                                                Panel.ZIndex="1"
                                                Click="XoaCongViecNoiBoButton_Click"
