                                    Header="STT" />

                                <!--  2. Ngày đặt sau STT  -->
                                <DataGridTextColumn
                                    Binding="{Binding Ngay, StringFormat=dd-MM-yyyy}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Ngày" />


                                <DataGridTextColumn
                                    Binding="{Binding NgayGio, StringFormat=HH:mm}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Giờ" />

                                <DataGridTextColumn
                                    Binding="{Binding Ten}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Tên khách hàng" />

                                <DataGridTextColumn
                                    x:Name="TongTienChiTietHoaDonNoTextBlock"
                                    Binding="{Binding SoTienNo, StringFormat=N0}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Số tiền" />
                                <!--<DataGridTextColumn
                                    Binding="{Binding SoTienDaTra, StringFormat=N0}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Đã thu" />-->
                                <DataGridTextColumn
                                    Binding="{Binding SoTienConLai, StringFormat=N0}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Còn lại" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding GhiChu}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Ghi chú" />
                                <!--<DataGridTextColumn
                                    Binding="{Binding MaHoaDon}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Mã hoá đơn" />-->
                                <DataGridTemplateColumn Header="Xoá">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Click="XoaChiTietHoaDonNoButton_Click"
                                                Content="❌"
                                                Style="{StaticResource XoaButtonStyle}"
                                                ToolTip="Xoá" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <StackPanel
                            Grid.Row="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Panel.ZIndex="1"
                            Orientation="Horizontal">
                            <Button
                                x:Name="F1aButton"
                                Margin="5"
                                Background="{StaticResource SuccessBrush}"
                                Click="F1aButton_Click"
                                Foreground="{StaticResource LightBrush}"
                                Style="{StaticResource AddButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage
                                        Width="16"
                                        Height="16"
                                        Foreground="{StaticResource LightBrush}"
                                        Icon="MoneyBill" />
                                    <TextBlock Margin="5,0,0,0" Text=" F1 - Tiền mặt" />
                                </StackPanel>
                            </Button>
                            <Button
                                Name="F4aButton"
                                Margin="5"
                                Background="{StaticResource WarningBrush}"
                                Click="F4aButton_Click"
                                Foreground="{StaticResource DarkBrush}"
                                Style="{StaticResource AddButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage
                                        Width="16"
                                        Height="16"
                                        Foreground="{StaticResource DarkBrush}"
                                        Icon="CreditCard" />
                                    <TextBlock Margin="5,0,0,0" Text=" F4 - Chuyển khoản" />
                                </StackPanel>
                            </Button>
                            <Button
                                Name="F5aButton"
                                Margin="5"
                                Background="Gold"
                                Click="F5aButton_Click"
                                Foreground="{StaticResource DarkBrush}"
                                Style="{StaticResource AddButtonStyle}"
                                Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconImage
                                        Width="16"
                                        Height="16"
                                        Foreground="{StaticResource DarkBrush}"
                                        Icon="University" />
                                    <TextBlock Margin="5,0,0,0" Text=" F5 - Banking Nhã" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Chi tiêu " Tag="ChiTieuHangNgay">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBox
