<Window
    x:Class="TraSuaApp.WpfClient.Views.Dashboard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
    Title="Dashboard"
    AllowsTransparency="True"
    Background="Transparent"
    PreviewKeyDown="Window_PreviewKeyDown"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    WindowStyle="None">

    <Border Background="#F5F5F5" CornerRadius="10">
        <Grid>
            <TextBlock
                Name="ThongBaoTextBlock"
                Margin="45"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Panel.ZIndex="2"
                FontSize="14"
                FontWeight="Bold"
                Foreground="Red"
                Text="Dashboard" />
            <TabControl
                Name="TabControl"
                Grid.Row="0"
                Grid.Column="0"
                Margin="4"
                Background="#4CAF50"
                SelectionChanged="TabControl_SelectionChanged">
                <TabItem Header="Thống kê hôm nay" Tag="ThongKeHomNay">
                    <Grid Background="#f6f6f6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <UniformGrid
                            Margin="10"
                            Columns="4"
                            Rows="0">
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#388E3C"
                                CornerRadius="8">
                                <StackPanel x:Name="DoanhThuStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#1976D2"
                                CornerRadius="8">
                                <StackPanel x:Name="DaThuStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#FBC02D"
                                CornerRadius="8">
                                <StackPanel x:Name="ChuaThuStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#D32F2F"
                                CornerRadius="8">
                                <StackPanel x:Name="CongNoStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#F57C00"
                                CornerRadius="8">
                                <StackPanel x:Name="ChiTieuStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#7B1FA2"
                                CornerRadius="8">
                                <StackPanel x:Name="TraNoTienStackPanel" />
                            </Border>
                            <Border
                                Margin="5"
                                Padding="10"
                                Background="#455A64"
                                CornerRadius="8">
                                <StackPanel x:Name="TraNoBankStackPanel" />
                            </Border>
                            <Border
                                Name="MangVeBorder"
                                Margin="5"
                                Padding="10"
                                Background="#00838F"
                                CornerRadius="8">
                                <StackPanel x:Name="MangVeStackPanel" Background="#00838F" />
                            </Border>
                        </UniformGrid>
                        <Grid Grid.Column="1" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBox x:Name="SearchBanNhieuTextBox" Visibility="Collapsed" />
                            <DataGrid
                                x:Name="BanNhieuGrid"
                                Margin="5"
                                AutoGenerateColumns="False"
                                HorizontalScrollBarVisibility="Hidden"
                                IsReadOnly="True">
                                <DataGrid.Columns>
                                    <!--<DataGridTextColumn
                                        Binding="{Binding Stt}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="STT" />-->
                                    <!--<DataGridTextColumn
                                        Binding="{Binding Ngay, StringFormat=dd-MM-yyyy}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="Ngày" />-->
                                    <DataGridTextColumn
                                        Binding="{Binding TenSanPham}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="Tên món" />
                                    <DataGridTextColumn
                                        Binding="{Binding SoLuong}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="Đã bán" />
                                    <DataGridTextColumn
                                        Binding="{Binding DoanhThu, StringFormat=N0}"
                                        ElementStyle="{StaticResource CenterTextCellStyle}"
                                        Header="Doanh thu" />
                                    <!--<DataGridTextColumn
                                        Width="*"
                                        Binding="{Binding TyLeDoanhThu}"
                                        ElementStyle="{StaticResource LeftTextCellStyle}" />-->

                                </DataGrid.Columns>
                            </DataGrid>
                            <ScrollViewer
                                Grid.Row="1"
                                Margin="5"
                                VerticalScrollBarVisibility="Auto">
                                <TextBlock
                                    Name="DuDoanDoanhThu"
                                    Margin="10"
                                    Foreground="Green"
                                    Text="{Binding DuDoanText}"
                                    TextWrapping="Wrap" />
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Hóa đơn hôm nay" Tag="HoaDon">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />

                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="SearchHoaDonTextBox"
                            Grid.ColumnSpan="3"
                            Padding="60,0,0,0"
                            TextChanged="SearchHoaDonTextBox_TextChanged" />
                        <Button
                            HorizontalAlignment="Left"
                            Panel.ZIndex="1"
                            Click="AddHoaDonButton_Click"
                            Content="➕ Add"
                            Style="{StaticResource ThemButtonStyle}" />
                        <DataGrid
                            x:Name="HoaDonDataGrid"
                            Grid.Row="1"
                            Grid.Column="1"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            MouseDoubleClick="HoaDonDataGrid_MouseDoubleClick"
                            SelectionChanged="HoaDonDataGrid_SelectionChanged">
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BaoDon}" Value="True">
                                            <Setter Property="Background" Value="Red" />
                                            <Setter Property="Foreground" Value="White" />
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard AutoReverse="True" RepeatBehavior="Forever">
                                                        <!--  nhấp nháy bằng opacity  -->
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            From="1.0"
                                                            To="0.3"
                                                            Duration="0:0:0.5" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Binding="{Binding Stt}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="STT" />

                                <!--<DataGridTextColumn
                                    x:Name="NgayHoaDonDataGridTextColumn"
                                    Binding="{Binding NgayGio, StringFormat=dd-MM-yyyy}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Ngày"
                                  />
                                <DataGridTextColumn
                                    Binding="{Binding NgayGio, StringFormat=hh:mm tt}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Giờ" />-->
                                <DataGridTextColumn
                                    Binding="{Binding GioHienThi}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Giờ" />

                                <DataGridTextColumn
                                    Binding="{Binding Ten}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Tên bàn/khách" />
                                <!--<DataGridTextColumn
                                    Binding="{Binding TongTien, StringFormat=N0}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Tổng tiền"
                                    Visibility="{Binding ElementName=NgayHoaDonDataGridTextColumn, Path=Visibility}" />
                                <DataGridTextColumn
                                    Binding="{Binding GiamGia, StringFormat=N0}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Voucher"
                                    Visibility="{Binding ElementName=NgayHoaDonDataGridTextColumn, Path=Visibility}" />-->

                                <DataGridTemplateColumn x:Name="TongTienHoaDonTextBlock" Header="Thành tiền">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock
                                                Padding="16,8,16,8"
                                                VerticalAlignment="Center"
                                                Text="{Binding ThanhTien, StringFormat=N0}"
                                                TextAlignment="Right"
                                                ToolTip="{Binding TrangThai}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Tiền mặt">
                                                                <Setter Property="Background" Value="LightGreen" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Chuyển khoản">
                                                                <Setter Property="Background" Value="LightYellow" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Banking Nhã">
                                                                <Setter Property="Background" Value="Gold" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Chuyển khoản + Tiền mặt">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                            <!--  Nửa đầu màu cam  -->
                                                                            <GradientStop Offset="0.0" Color="LightGreen" />
                                                                            <GradientStop Offset="0.5" Color="LightGreen" />
                                                                            <!--  Nửa sau trong suốt  -->
                                                                            <GradientStop Offset="0.5" Color="LightYellow" />
                                                                            <GradientStop Offset="1.0" Color="LightYellow" />
                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Banking Nhã + Tiền mặt">
                                                                <Setter Property="Background">
                                                                    <Setter.Value>
                                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                            <!--  Nửa đầu màu cam  -->
                                                                            <GradientStop Offset="0.0" Color="LightGreen" />
                                                                            <GradientStop Offset="0.5" Color="LightGreen" />
                                                                            <!--  Nửa sau trong suốt  -->
                                                                            <GradientStop Offset="0.5" Color="Gold" />
                                                                            <GradientStop Offset="1.0" Color="Gold" />
                                                                        </LinearGradientBrush>
                                                                    </Setter.Value>
                                                                </Setter>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Thu một phần">
                                                                <Setter Property="Background" Value="PaleTurquoise" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Chưa thu">
                                                                <Setter Property="Background" Value="Transparent" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Nợ một phần">
                                                                <Setter Property="Background" Value="LightCoral" />
                                                                <Setter Property="Foreground" Value="White" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding TrangThai}" Value="Ghi nợ">
                                                                <Setter Property="Background" Value="IndianRed" />
                                                                <Setter Property="Foreground" Value="White" />
                                                            </DataTrigger>
                                                        </Style.Triggers>

                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>


                                <DataGridTextColumn
                                    Binding="{Binding DaThu, StringFormat=N0}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Đã thu"
                                    Visibility="{Binding ElementName=NgayHoaDonDataGridTextColumn, Path=Visibility}" />

                                <DataGridTextColumn
                                    Binding="{Binding ConLai, StringFormat=N0}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Còn Lại"
                                    Visibility="{Binding ElementName=NgayHoaDonDataGridTextColumn, Path=Visibility}" />

                                <!--<DataGridTextColumn
                                    Binding="{Binding TrangThai}"
                                    ElementStyle="{StaticResource CenterTextCellStyle}"
                                    Header="Trạng thái"
                                    Visibility="{Binding ElementName=NgayHoaDonDataGridTextColumn, Path=Visibility}" />-->
                                <!--<DataGridTemplateColumn Header="Xoá">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Click="XoaHoaDonButton_Click"
                                                Content="❌"
                                                Style="{StaticResource XoaButtonStyle}"
                                                ToolTip="Xoá" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>-->
                                <DataGridTemplateColumn Width="Auto" Header="">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                <fa:IconBlock
                                                    Width="16"
                                                    Height="16"
                                                    Icon="Motorcycle"
                                                    Visibility="{Binding NgayShip, Converter={StaticResource NullToVisibilityConverter}}" />

                                                <fa:IconBlock
                                                    Width="16"
                                                    Height="16"
                                                    Icon="Bell"
                                                    Visibility="{Binding BaoDon, Converter={StaticResource BoolToVisibilityConverter}}" />

                                                <fa:IconBlock
                                                    Width="16"
                                                    Height="16"
                                                    Icon="Star"
                                                    Visibility="{Binding UuTien, Converter={StaticResource BoolToVisibilityConverter}}" />

                                                <fa:IconBlock
                                                    Width="16"
                                                    Height="16"
                                                    Icon="Clock"
                                                    Visibility="{Binding NgayHen, Converter={StaticResource NullToVisibilityConverter}}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Background="#f0f0f0">
                            <StackPanel x:Name="HoaDonButtonStack" Margin="8">
                                <Button
                                    Name="EscButton"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="EscButton_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Motorcycle" />
                                        <TextBlock Margin="5,0,0,0" Text=" Esc - Đi ship" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    x:Name="F1Button"
                                    Margin="5"
                                    Background="LightGreen"
                                    Click="F1Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="Black"
                                            Icon="MoneyBill" />
                                        <TextBlock Margin="5,0,0,0" Text=" F1 - Tiền mặt" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F2Button"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="F2Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Print" />
                                        <TextBlock Margin="5,0,0,0" Text=" F2 - In bill" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F3Button"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="F3Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="ShareSquare" />
                                        <TextBlock Margin="5,0,0,0" Text=" F3 - Gửi bill" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F4Button"
                                    Margin="5"
                                    Background="LightYellow"
                                    Click="F4Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="Black"
                                            Icon="CreditCard" />
                                        <TextBlock Margin="5,0,0,0" Text=" F4 - Chuyển khoản" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F5Button"
                                    Margin="5"
                                    Background="Gold"
                                    Click="F5Button_Click"
                                    Foreground="Black"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="Black"
                                            Icon="University" />
                                        <TextBlock Margin="5,0,0,0" Text=" F5 - Banking Nhã" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F6Button"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="F6Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Qrcode" />
                                        <TextBlock Margin="5,0,0,0" Text=" F6 - Gửi Stk" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F7Button"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="F7Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Bell" />
                                        <TextBlock Margin="5,0,0,0" Text=" F7 - Báo đơn" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F8Button"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="F8Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Star" />
                                        <TextBlock Margin="5,0,0,0" Text="F8 - Ưu tiên" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="F9Button"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="F9Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Clock" />
                                        <TextBlock Margin="5,0,0,0" Text=" F9 - Hẹn giờ" />
                                    </StackPanel>
                                </Button>
                                <StackPanel
                                    Name="HenGioStackPanel"
                                    Margin="5"
                                    Visibility="Collapsed">
                                    <StackPanel Orientation="Horizontal">
                                        <ComboBox x:Name="GioCombo" />
                                        <TextBlock VerticalAlignment="Center" Text=":" />
                                        <ComboBox x:Name="PhutCombo" />
                                        <Button
                                            x:Name="OkHenGio"
                                            Click="OkHenGioButton_Click"
                                            Content="OK"
                                            Style="{StaticResource ThemButtonStyle}" />
                                    </StackPanel>
                                </StackPanel>
                                <Button
                                    Name="F12Button"
                                    Margin="5"
                                    Background="IndianRed"
                                    Click="F12Button_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="PencilAlt" />
                                        <TextBlock Margin="5,0,0,0" Text=" F12 - Ghi nợ" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="DelButton"
                                    Margin="5"
                                    Click="DelButton_Click"
                                    Foreground="White"
                                    Style="{StaticResource DeleteButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Trash" />
                                        <TextBlock Margin="5,0,0,0" Text=" Del - Xoá" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="History" />
                                        <TextBlock Margin="5,0,0,0" Text=" Lịch sử" />
                                    </StackPanel>
                                </Button>
                                <Button
                                    Name="AppButton"
                                    Margin="5"
                                    Background="DodgerBlue"
                                    Click="AppButton_Click"
                                    Foreground="White"
                                    Style="{StaticResource AddButtonStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <fa:IconImage
                                            Width="16"
                                            Height="16"
                                            Foreground="White"
                                            Icon="Heart" />
                                        <TextBlock Margin="5,0,0,0" Text="App Shipping" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <ListBox
                            x:Name="ChiTietHoaDonListBox"
                            Grid.Row="1"
                            Grid.Column="2"
                            Background="WhiteSmoke"
                            BorderThickness="0"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Margin="4"
                                        Padding="8"
                                        Background="White"
                                        BorderBrush="LightGray"
                                        BorderThickness="1"
                                        CornerRadius="4">
                                        <StackPanel>
                                            <!--  Tên sản phẩm + biến thể  -->
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="Black"
                                                Text="{Binding TenSanPham}" />
                                            <TextBlock
                                                Margin="0,0,0,4"
                                                FontSize="12"
                                                Foreground="Gray"
                                                Text="{Binding TenBienThe}" />

                                            <!--  Grid chi tiết số lượng, đơn giá, thành tiền  -->
                                            <Grid Margin="0,2,0,2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock
                                                    Grid.Column="0"
                                                    Margin="0,0,15,0"
                                                    Text="{Binding SoLuong, StringFormat='SL: {0}'}" />

                                                <TextBlock
                                                    Grid.Column="1"
                                                    Margin="0,0,15,0"
                                                    Foreground="DarkSlateGray"
                                                    Text="{Binding DonGia, StringFormat={}{0:n0} đ}" />

                                                <TextBlock
                                                    Grid.Column="2"
                                                    HorizontalAlignment="Right"
                                                    FontWeight="Bold"
                                                    Foreground="DarkRed"
                                                    Text="{Binding ThanhTien, StringFormat={}{0:n0} đ}" />
                                            </Grid>

                                            <!--  Topping  -->
                                            <TextBlock
                                                Margin="0,0,0,2"
                                                FontSize="12"
                                                Foreground="DarkGreen"
                                                Text="{Binding ToppingText}"
                                                TextWrapping="Wrap"
                                                Visibility="{Binding ToppingText, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />

                                            <!--  Ghi chú  -->
                                            <TextBlock
                                                FontSize="12"
                                                FontStyle="Italic"
                                                Foreground="DarkOrange"
                                                Text="{Binding NoteText}"
                                                TextWrapping="Wrap"
                                                Visibility="{Binding NoteText, Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>


                    </Grid>
                </TabItem>
                <TabItem Header="Thanh toán hôm nay" Tag="ChiTietHoaDonThanhToan">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBox x:Name="SearchChiTietHoaDonThanhToanTextBox" TextChanged="SearchChiTietHoaDonThanhToanTextBox_TextChanged" />
                        <DataGrid
                            x:Name="ChiTietHoaDonThanhToanDataGrid"
                            Grid.Row="1"
                            AutoGenerateColumns="False"
                            IsReadOnly="True"
                            MouseDoubleClick="ChiTietHoaDonThanhToanDataGrid_MouseDoubleClick">
                            <!--<DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Style.Triggers>
