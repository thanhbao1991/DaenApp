<Window
    x:Class="TraSuaApp.WpfClient.SettingsViews.NguyenLieuList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:TraSuaApp.WpfClient.SettingsViews"
    Style="{StaticResource PopupWindowWithBorderStyle}"
    WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!--  Converter lookup NL bán hàng  -->
        <local:NguyenLieuBanHangNameConverter x:Key="NguyenLieuBanHangNameConverter" />
        <local:NguyenLieuBanHangDonViConverter x:Key="NguyenLieuBanHangDonViConverter" />
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Tiêu đề  -->
        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Name="TieuDeTextBlock" Style="{StaticResource TitleTextStyle}" />
            <Button
                Click="CloseButton_Click"
                DockPanel.Dock="Right"
                Style="{StaticResource CloseButtonStyle}" />
        </DockPanel>

        <!--  Thanh công cụ  -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Margin="0,0,4,0">
                <TextBox
                    x:Name="SearchTextBox"
                    Style="{StaticResource SearchTextBoxStyle}"
                    TextChanged="SearchTextBox_TextChanged" />
                <TextBlock
                    Style="{StaticResource SearchHintTextStyle}"
                    Text="Tìm kiếm..."
                    Visibility="{Binding Text.IsEmpty, ElementName=SearchTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="AddButton_Click"
                    Content="Thêm"
                    Style="{StaticResource AddButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="EditButton_Click"
                    Content="Sửa"
                    Style="{StaticResource EditButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="DeleteButton_Click"
                    Content="Xoá"
                    Style="{StaticResource DeleteButtonStyle}" />
                <Button
                    Width="80"
                    Click="ReloadButton_Click"
                    Content="Tải lại"
                    Style="{StaticResource ReloadButtonStyle}" />
            </StackPanel>
        </Grid>

        <!--  Danh sách  -->
        <DataGrid
            x:Name="NguyenLieuDataGrid"
            Grid.Row="2"
            Margin="10"
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            MouseDoubleClick="NguyenLieuDataGrid_MouseDoubleClick">

            <DataGrid.Columns>
                <!--  STT  -->
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding Stt}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="STT" />

                <!--  Tên nguyên liệu  -->
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Ten}"
                    ElementStyle="{StaticResource LeftTextCellStyle}"
                    Header="Tên nguyên liệu" />

                <!--  ĐVT nhập  -->

                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="50"
                    Binding="{Binding GiaNhap, StringFormat={}{0:N0}}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Giá nhập (đ)" />
                <!--  NL bán hàng (lookup)  -->
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="50"
                    Binding="{Binding DonViTinh}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="ĐVT nhập" />

                <!--  Giá nhập  -->
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="50"
                    Binding="{Binding HeSoQuyDoiBanHang, StringFormat={}{0:0.####}}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Hệ số" />

                <!--  ĐVT bán (lookup)  -->
                <DataGridTextColumn
                    Width="Auto"
                    MinWidth="50"
                    Binding="{Binding NguyenLieuBanHangId, Converter={StaticResource NguyenLieuBanHangDonViConverter}}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="ĐVT bán" />
                <DataGridTextColumn
                    Width="auto"
                    MinWidth="50"
                    Binding="{Binding NguyenLieuBanHangId, Converter={StaticResource NguyenLieuBanHangNameConverter}}"
                    ElementStyle="{StaticResource LeftTextCellStyle}"
                    Header="Nguyên liệu bán" />

                <!--  Hệ số  -->

                <!--  Ẩn / Đang dùng  -->
                <DataGridCheckBoxColumn
                    Width="Auto"
                    MinWidth="50"
                    Binding="{Binding DangSuDung}"
                    ElementStyle="{StaticResource DataGridCheckBoxElementStyle}"
                    Header="Ẩn" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>