<UserControl
    x:Class="TraSuaApp.WpfClient.Views.ChiTieuHangNgayTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Thanh thao tác  -->
        <DockPanel Margin="4">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                <TextBlock
                    Padding="8"
                    VerticalAlignment="Center"
                    Text="Tìm kiếm:" />
                <TextBox
                    x:Name="SearchChiTieuHangNgayTextBox"
                    Width="320"
                    Margin="8,0,0,0"
                    TextChanged="SearchChiTieuHangNgayTextBox_TextChanged" />
                <Button
                    x:Name="AddChiTieuHangNgayButton"
                    Click="AddChiTieuHangNgayButton_Click"
                    Foreground="White"
                    Style="{StaticResource ThemButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <fa:IconBlock Margin="0,0,6,0" Icon="Plus" />
                        <TextBlock Text="Thêm chi tiêu" />
                    </StackPanel>
                </Button>
            </StackPanel>

        </DockPanel>

        <!--  Bảng chi tiêu  -->
        <DataGrid
            x:Name="ChiTieuHangNgayDataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            MouseDoubleClick="ChiTieuHangNgayDataGrid_MouseDoubleClick">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="FontSize" Value="{StaticResource FontSizeNormal}" />
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding Stt}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="STT" />
                <DataGridTextColumn
                    Width="110"
                    Binding="{Binding Ngay, StringFormat=dd-MM-yyyy}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="Ngày" />
                <DataGridTextColumn
                    Width="90"
                    Binding="{Binding NgayGio, StringFormat=HH:mm}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="Giờ" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Ten}"
                    ElementStyle="{StaticResource LeftTextCellStyle}"
                    Header="Tên" />
                <DataGridTextColumn
                    x:Name="TongTienChiTieuHangNgayTextBlock"
                    Width="160"
                    Binding="{Binding ThanhTien, StringFormat={}{0:N0} đ}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Thành tiền" />
                <DataGridTextColumn
                    Width="2*"
                    Binding="{Binding GhiChu}"
                    ElementStyle="{StaticResource LeftTextCellStyle}"
                    Header="Ghi chú" />

                <!--  Nút xoá (ẩn giống phong cách các tab khác)  -->
                <DataGridTemplateColumn Width="80" Visibility="Visible">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="XoaChiTieuHangNgayButton_Click" Style="{StaticResource XoaButtonStyle}">
                                <StackPanel Orientation="Horizontal">
                                    <fa:IconBlock Margin="0,0,5,0" Icon="Trash" />
                                    <TextBlock Text="Xoá" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>