<Window
    x:Class="TraSuaApp.WpfClient.AdminViews.LocationEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource EditWindowStyle}"
    WindowStartupLocation="CenterScreen">

    <Border Style="{StaticResource EditFormBorderStyle}">
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Style="{StaticResource EditHeaderPanelStyle}">
                <TextBlock Name="TieuDeTextBlock" Style="{StaticResource EditTitleTextStyle}" />
                <Button
                    Click="CloseButton_Click"
                    Content="✖"
                    Style="{StaticResource CloseButtonStyle}" />
            </DockPanel>

            <StackPanel Grid.Row="1" Margin="0,8,0,0">
                <GroupBox Header="Địa chỉ bắt đầu">
                    <TextBox x:Name="StartAddressTextBox" Margin="0,4,0,0" />
                </GroupBox>

                <GroupBox Margin="0,8,0,0" Header="Toạ độ - khoảng cách">
                    <UniformGrid
                        Margin="0,4,0,0"
                        Columns="2"
                        Rows="2">
                        <StackPanel Margin="0,0,8,0">
                            <TextBlock Text="Lat" />
                            <TextBox x:Name="StartLatTextBox" />
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="Long" />
                            <TextBox x:Name="StartLongTextBox" />
                        </StackPanel>
                        <StackPanel Margin="0,8,8,0">
                            <TextBlock Text="Distance (km)" />
                            <TextBox x:Name="DistanceKmTextBox" />
                        </StackPanel>
                        <StackPanel Margin="0,8,0,0">
                            <TextBlock Text="Tiền quãng đường" />
                            <TextBox x:Name="MoneyDistanceTextBox" />
                        </StackPanel>
                    </UniformGrid>
                </GroupBox>

                <GroupBox Margin="0,8,0,0" Header="Matrix (chuỗi mã hoá tuyến)">
                    <TextBox x:Name="MatrixTextBox" Margin="0,4,0,0" />
                </GroupBox>

                <GroupBox Margin="0,8,0,0" Header="Sử dụng gần nhất">
                    <TextBox x:Name="LastUsedAtTextBox" IsReadOnly="True" />
                </GroupBox>
            </StackPanel>

            <StackPanel Grid.Row="2">
                <TextBlock x:Name="ErrorTextBlock" Style="{StaticResource ErrorTextBlock}" />
                <Button
                    Name="SaveButton"
                    Click="SaveButton_Click"
                    Content="Lưu"
                    Style="{StaticResource SaveButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
