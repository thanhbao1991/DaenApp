<Window
    x:Class="TraSuaApp.WpfClient.AdminViews.LocationList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Style="{StaticResource PopupWindowWithBorderStyle}"
    WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Name="TieuDeTextBlock" Style="{StaticResource TitleTextStyle}" />
            <Button
                Click="CloseButton_Click"
                DockPanel.Dock="Right"
                Style="{StaticResource CloseButtonStyle}" />
        </DockPanel>

        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid Margin="0,0,4,0">
                <TextBox
                    x:Name="SearchTextBox"
                    Style="{StaticResource SearchTextBoxStyle}"
                    TextChanged="SearchTextBox_TextChanged" />
                <TextBlock
                    Style="{StaticResource SearchHintTextStyle}"
                    Text="Tìm theo địa chỉ..."
                    Visibility="{Binding Text.IsEmpty, ElementName=SearchTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>

            <StackPanel
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="AddButton_Click"
                    Content="Thêm"
                    Style="{StaticResource AddButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="EditButton_Click"
                    Content="Sửa"
                    Style="{StaticResource EditButtonStyle}" />
                <Button
                    Width="80"
                    Margin="0,0,4,0"
                    Click="DeleteButton_Click"
                    Content="Xoá"
                    Style="{StaticResource DeleteButtonStyle}" />
                <Button
                    Width="80"
                    Click="ReloadButton_Click"
                    Content="Tải lại"
                    Style="{StaticResource ReloadButtonStyle}" />
            </StackPanel>
        </Grid>

        <DataGrid
            x:Name="LocationDataGrid"
            Grid.Row="2"
            Margin="10"
            AutoGenerateColumns="False"
            CanUserSortColumns="False"
            MouseDoubleClick="LocationDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding STT}"
                    ElementStyle="{StaticResource CenterTextCellStyle}"
                    Header="STT" />
                <DataGridTextColumn
                    Width="2.5*"
                    Binding="{Binding StartAddress}"
                    Header="Địa chỉ" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding StartLat}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Lat" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding StartLong}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Long" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DistanceKm}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Km" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding MoneyDistance}"
                    ElementStyle="{StaticResource RightTextCellStyle}"
                    Header="Tiền (đ)" />
                <DataGridTextColumn
                    Width="1.5*"
                    Binding="{Binding LastUsedAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}"
                    Header="Dùng gần nhất" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
