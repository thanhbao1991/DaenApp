<Window
    x:Class="TraSuaApp.WpfClient.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TraSuaApp"
    Width="400"
    Loaded="Window_Loaded"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Padding="20"
        Background="White"
        BorderBrush="#CCC"
        BorderThickness="1"
        CornerRadius="12">
        <StackPanel
            Width="300"
            Margin="12"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#333"
                Text="🟟 TRA SUA APP"
                TextAlignment="Center" />
            <Button
                Click="MenuButton_Click"
                Content="Bot"
                Style="{StaticResource DeleteButtonStyle}"
                Tag="CodeGeneratorWindow" />
            <Button
                x:Name="BtnTaiKhoan"
                Click="MenuButton_Click"
                Content="Tài khoản"
                Style="{StaticResource DeleteButtonStyle}"
                Tag="TaiKhoanList" />
            <Button
                Click="MenuButton_Click"
                Content="Nhóm sản phẩm"
                Style="{StaticResource DeleteButtonStyle}"
                Tag="NhomSanPhamList" />
            <Button
                Click="MenuButton_Click"
                Content="Sản phẩm"
                Style="{StaticResource DeleteButtonStyle}"
                Tag="SanPhamList" />
            <Button
                Click="MenuButton_Click"
                Content="Topping"
                Style="{StaticResource DeleteButtonStyle}"
                Tag="ToppingList" />


            <!--  Thêm nút khác nếu cần  -->

            <Button
                Margin="0,30,0,0"
                Click="Thoat_Click"
                Content="Thoát"
                Style="{StaticResource DeleteButtonStyle}" />
        </StackPanel>
    </Border>
</Window>