@page
@model TraSuaAppWeb.Pages.ChiTieuNhaModel
@{
    ViewData["Title"] = "Chi tiêu nhà (tháng)";
}

<div class="container-fluid p-2">

    <!-- Thanh điều hướng tháng -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <a class="btn btn-outline-primary btn-sm"
           href="?thang=@Model.Prev.Month&nam=@Model.Prev.Year">← Tháng trước</a>

        <span class="fw-bold fs-5">@Model.CurrentMonthStart.ToString("MM/yyyy")</span>

        <a class="btn btn-outline-primary btn-sm"
           href="?thang=@Model.Next.Month&nam=@Model.Next.Year">Tháng sau →</a>
    </div>

    <div class="d-flex justify-content-end mb-2">
        <div class="fw-bold">Tổng tiền: @String.Format("{0:N0}", Model.Tong) đ</div>
    </div>

    @if (Model.Items?.Any() == true)
    {
        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th style="width:60px">STT</th>
                        <th style="width:120px">Ngày</th>
                        <th style="width:200px">Tên</th>
                        <th class="text-end" style="width:160px">Thành tiền</th>
                        <th>Ghi chú</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var stt = 1;
                        foreach (var it in Model.Items)
                        {
                            <tr>
                                <td>@(stt++)</td>
                                <td>@it.Ngay.ToString("dd/MM/yyyy")</td>
                                <td>@it.Ten</td>
                                <td class="text-end">@it.ThanhTien.ToString("N0")</td>
                                <td>@it.GhiChu</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning">Không có dữ liệu tháng này.</div>
    }
</div>